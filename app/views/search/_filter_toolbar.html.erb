<div class="visible-xs">
    <!-- button bar / button group. Look at guided search for dress code.  btn-group  -->
    <div class="btn-group row full-width">
        <% show_guided_search = true #ToDo add a check for hub mapping to allow guided-search %>
        <% state = 'delaware' #ToDo set state to actual state %>
        <button type="button" class="btn btn-primary <%= show_guided_search ? 'col-xs-4' : 'col-xs-6' %> js-searchFiltersDropdown">Filters</button>
        <% if show_guided_search %>
          <a type="button" class="btn btn-primary col-xs-4" style="border-left: thin solid white;"
            href="<%= state_guided_search_path(state: state) %>">
            Guide Me
          </a>
        <%end %>
        <button type="button" class="btn btn-primary <%= show_guided_search ? 'col-xs-4' : 'col-xs-6' %> js-search-toggle-map-view" style="border-left: thin solid white;">Map</button>
    </div>
</div>
<div class="limit-width-1200 pr ptm plm prm">
  <div class="pa pam" style="left:-5px">
    <div class="hidden-xs js-searchFiltersDropdown">Refine Search<span class="caret"></span>
    </div>
    <div class="dn zir-1 pam js-searchFiltersMenu">
      <div class="ptm panel panel-primary">
        <div class="clearfix">
          <form name="searchFiltersForm" id="js-searchFiltersForm" action method="get">

            <%lam = lambda do |filters| %>
              <% [*filters].each do |filter| %>
                <%= render layout: "search/filters/#{filter.display_type.to_s}", locals: {filter: filter} do %>
                  <% lam.call(filter.filters) %>
                <% end %>
              <% end %>
            <% end %>
            <% lam.call(@filters) %>

            <% if @params_hash['state'].present?%><input type="hidden" name="state" value=<%=@params_hash['state']%>><%end%>
            <% if @params_hash['city'].present?%><input type="hidden" name="city" value=<%=@params_hash['city']%>><%end%>
          </form>
        </div>

        <div class="clearfix pal" style="">
          <label class="fl">
            <a class="js-advancedFilters">More Filters</a>
          </label>
          <button class="btn btn-default fr" id="js-submitSearchFiltersForm" type='submit'>Submit</button>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="hidden-xs limit-width-1200 full-width row pam">
  <div class="col-xs-3"></div>
  <div class="col-xs-2">
    <% if show_guided_search %>
      <span class="iconx16 i-16-blue-info vam"></span>
      <a href='<%= state_guided_search_path(state: state) %>'>Guide Me</a>
    <% end %>
  </div>
  <div class="col-xs-7 clearfix">
    <div class="fr">
      <span class="js-search-list-view">
      <span  class="iconx16 i-16-grey-list-view vam"></span>
      List
      </span>
      |
      <span class="js-search-map-view">
      <span  class="iconx16 i-16-blue-map-view val"></span>
        Map
      </span>
    </div>
  </div>
</div>


