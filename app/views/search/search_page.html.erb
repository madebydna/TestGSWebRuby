<% @renderedFilters = render 'search/filter_form' #rendering and setting to variable to avoid rendering twice %>

<div class ="search-page gs-bootstrap">
  <%= render partial: 'search/filter_form_mobile' %>

  <div class="js-responsiveSearchPage">
    <%= render 'search/search_page_search_bar' %>
    <%= render 'number_schools_found' %>

    <% if @schools.present? %>
      <%= render 'filter_toolbar_mobile' %>
      <%= render 'filter_toolbar_desktop' %>
      <%= render 'search/google_maps', schools: @map_schools %>
      <%= render partial: 'search/search_results', schools: @schools%>
      <%= render partial: 'pagination_toolbar' %>
      <%= render partial: 'shared/maponics_disclaimer' %>
    <% else %>
      <%= render 'filter_toolbar_mobile' %>
      <%= render 'filter_toolbar_desktop' %>
      <%= render 'no_results' %>
    <% end %>
  </div>
</div>

<%= render 'shared/home_footer'%>
