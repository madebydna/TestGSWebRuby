<% if @show_ads %>
    <% ad_counter ||= 0 %>
    <% if desktop_slots && desktop_slots[ad_counter] %>
        <% ad_slot = desktop_slots[ad_counter] %>

        <div width="100%">
          <% if  ad_slot.is_a?(Hash) %>
              <%= render 'layouts/ad_layer', page: ('Search').to_sym, slot: ad_slot[:name].to_sym, view: :desktop %>
          <% elsif  ad_slot.is_a?(Array) && ad_slot.size == 2 %>
              <% ad_slots = ad_slot %>
              <div class="clearfix limit-width-900">
                <% ad_slots.each_with_index do |ad_slot, i| %>
                    <% float_type = i == 0 ? 'fl' : 'fr' %>
                    <div class="<%= float_type %>">
                        <%= render 'layouts/ad_layer', page: ('Search').to_sym, slot: ad_slot[:name].to_sym, view: :desktop %>
                    </div>
                <% end %>
              </div>
          <% end %>
        </div>

    <% end %>

    <% if mobile_slots && mobile_slots[ad_counter] %>
        <% ad_slot = mobile_slots[ad_counter] %>
        <div width="100%">
          <%= render 'layouts/ad_layer', page: ('Search').to_sym, slot: ad_slot[:name].to_sym, view: :mobile %>
        </div>
    <% end %>
<% end %>
