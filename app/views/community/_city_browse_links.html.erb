<% cities %>
<% locality %>

<section class="links-module">
  <h3><%= I18n.t('cities', scope: 'community.toc') %></h3>
  <ul>
    <% cities.each_with_index do |city, idx| %>
      <li>
        <a href="<%= city[:url] %>"><%= city[:name] %></a>
        <% if idx == (cities.length - 1) %>
          <div></div>
        <% elsif idx == 3 %>
          <div class="blue-line hide-line"></div>
        <% else %>
          <div class="blue-line"></div>
        <% end %>
      </li>
    <% end %>
  </ul>
  <div class="separator">
    <div class="blue-line"></div>
  </div>
  <div class="more-school-btn">
    <a href="<%= locality[:citiesBrowseUrl] %>">
      <button><%= I18n.t('cities_browse_more_button', scope: 'community.state') %></button>
    </a>
  </div>
</section>