<div id="home_state_select_wrapper">
	<p><%= t('home.hero.find-schools-by-state').upcase %></p>
	<div class="dropdown-container">
		<div class="state-btn"><%= t('shared.school_picker.select_state') %><span class="icon-caret-down"></span></div>
		<ul class="hide-state-list">
			<% States.state_hash.except('district of columbia', 'washington dc').keys.map do |state| %>
				<a href=<%= state_path(States.state_path(state)) %>>
					<li>
						<%= States.capitalize_any_state_names(state) %>
					</li>
				</a>
			<% end %>
		</ul>
	</div>
</div>