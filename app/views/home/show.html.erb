<% content_for :head do %>
    <!-- This is because the meta-tags gem truncates description at 200 chars. See https://github.com/kpumuk/meta-tags -->
    <meta name="description" content="Compare K-12 school ratings nationwide to find the best schools. View parent ratings, reviews and test scores and choose the right preschool, elementary, middle or high school for public or private education." />
    
<% end %>

<% content_for :javascript_includes do %>
    <script>
        $(function() {
          GS.util.setupImages(
            {
              selector: '.is-scaled',
              desktopImage: '<%= image_path('home/slideshow/home_1600_6.jpg')%>',
              mobileImage: '<%= image_path('home/slideshow/home_480_6.jpg')%>',
              classes: 'scaling'
            }
          );
          GS.util.setupImages(
            {
              selector: '.is-scaled-banner',
              desktopImage: '<%= image_path('home/milestone_background-sm.jpg')%>',
              mobileImage: '<%= image_path('home/milestone_background_mobile.jpg')%>',
              classes: 'scaling'
            }
          );
        });
    </script>
<% end %>

<div id="home-page" class="gs-bootstrap container-fluid">

  <%= render layout: 'hero' do %>
    <div class="row">
      <div class="col-xs-12 col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-2 col-lg-4 col-lg-offset-2">
        <div class="mtxl hidden-xs"></div>
        <div class="oa tac text_fff pal darken">
          <h1 class="jumbo-text-sub text_fff"><%= t('.heading') %></h1>
          <div class="subtitle ts"><%= t('.subheading') %></div>
          <%= render partial: 'home/search_form' %>
          <div class="mtm">
            <%= render partial: 'home/gk_content' %>
          </div>
        </div>
      </div>
    </div>
    <% end %>

  <div class="row">
    <div class="col-xs-12 col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3">
      <p class="mission-text"><%= t('.mission-text') %></p>
      <p class="tac pbl"><a href="/gk/about/" class="font-size-xl"><%= t('.learn-more') %></a></p>
    </div>
  </div>
</div>

