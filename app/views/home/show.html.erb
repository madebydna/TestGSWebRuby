<% content_for :head do %>
    <!-- This is because the meta-tags gem truncates description at 200 chars. See https://github.com/kpumuk/meta-tags -->
    <meta name="description" content="View parent ratings, reviews and test scores and choose the right preschool, elementary, middle or high school for public or private education." />
    <meta name="google-site-verification" content="zOi8EZHiVs8q_pVV2RM11ic3q0hnJXTIphoISsEyUUw" />
<% end %>

<% content_for :page_javascripts do %>
  <%= webpack_javascript_include_tag "commons", defer: true %>
  <%= webpack_javascript_include_tag "react-redux", defer: true %>
  <%= webpack_javascript_include_tag "home", defer: true %>
<% end %>

<% content_for :page_stylesheets do %>
  <%= stylesheet_link_tag "home_page", media: "all", "data-turbolinks-track" => true %>
<% end %>

<% content_for :javascript_includes do %>
    <script>
    </script>
<% end %>

<div id="home-page">
  <%= render layout: 'hero' do %>

  <% end %>
  <%#= render partial: 'below_hero' %>
</div>

<%= content_for(:additional_footer_content) do %>
  <div id="home-city-footer">
      <div class="container">
        <div class="heading"><%= t('nav.footer.find-great-schools') %></div>
        <div class="row columns">
          <% @city_list_for_footer.each_with_index do |city_with_state, i| %>
            <% city, state = city_with_state.match(/^([\w\s]+),\s([A-Z]{2})/).captures %>
            <div class='<%= "col-sm-12 #{i > 18 ? 'extra' : ''}" %>'><%= link_to city_with_state, city_url(city_params(state, city)) %></div>
          <% end %>
          <div class="col-sm-12" id="show-more-for-footer">
            <a href="#"><%= t('javascript.show_more') %></a>
          </div>
        </div>
      </div>
  </div>

<% end %>

<%= react_component('SearchBoxWrapper', props: {
  pageType: 'Home'
}) %>
