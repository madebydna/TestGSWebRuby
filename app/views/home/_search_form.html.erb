<% unless defined?(searchClass) %>
  <% searchClass = '' %>
<% end %>

<div class="row ptm">
  <form name="schoolResultsSearchForm" class="js-schoolResultsSearchForm" action="/search/search.page" method="get">
    <div class="col-xs-9 prm mbm">
      <input  type="text"
              name="locationSearchString"
              value="<%= @search_term %>"
              data-prev-search="<%= @search_term || '' %>"
              id="js-schoolResultsSearch"
              class='typeahead search-text full-width pam <%= searchClass %>'
              placeholder="">

              <label class="dn js-mobile-placeholder js-translate-placeholder"></label>
    </div>

    <div class="col-xs-3 phm mbm">
      <button type='submit' class=" pull-right btn btn-primary" style="height: 46px;"><span class="iconx24-icons i-24-search-white"></span></button>
    </div>
  </form>
</div>
