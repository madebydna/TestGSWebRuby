<% unless defined?(searchClass) %>
  <% searchClass = '' %>
<% end %>

<div class="ptm clearfix">
  <form name="schoolResultsSearchForm" class="js-schoolResultsSearchForm" action="/search/search.page" method="get">
    <div class="input-group">
      <input  type="text"
              name="locationSearchString"
              value="<%= @search_term %>"
              data-prev-search="<%= @search_term || '' %>"
              id="js-schoolResultsSearch"
              class='form-control typeahead search-text full-width pam <%= searchClass %>'
              placeholder="">

            <label class="dn js-mobile-placeholder js-translate-placeholder"></label>

        <div class="input-group-btn" style="vertical-align:top">
          <button type='submit' class="btn btn-primary" style="height: 46px;"><span class="iconx24-icons i-24-search-white"></span></button>
        </div>
    </div>
  </form>
</div>
