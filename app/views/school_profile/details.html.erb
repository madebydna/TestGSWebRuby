<%= render 'qualaroo' %>
<div class="mbl">
<%= render 'school_profile/header', school: @school, page_name: :details %>
<%= render 'school_profile/dark_header', school: @school, page_name: :details %>
</div>
<div class="row limit-width-1200">

    <% root_placements = @page_config.root_placements_with_data %>
    <% root_placements_w_data = @page_config.root_placements_with_profile_data %>
    <% if root_placements_w_data.empty? %>
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <% if @show_ads %>
                <div class="pvl">
                    <%= render 'layouts/ad_layer', page: @ad_page_name, slot: 'Content_Top'.to_sym, view: :desktop  %>
                    <%= render 'layouts/ad_layer', page: @ad_page_name, slot: 'Content_Top'.to_sym, view: :mobile  %>
                </div>
            <% end %>
            <div class="mvl well">
                <% if @school.preschool? %>
                    <p><%= t('.preschool_data_missing_line_1') %></p>
                    <p><%= t('.preschool_data_missing_line_2') %></p>
                <% else %>
                    <p><%= t('.data_missing_line_1') %> <%= link_to "#{t('.get_started')} &raquo;".html_safe, osp_form_url(school_id: @school.id.to_s,state: @school.state) %></p>
                    <p><%= t('.data_missing_line_2') %> <%= link_to "#{t('.get_started')} &raquo;".html_safe, osp_register_url(city: @school.city, school_id: @school.id.to_s, state: @school.state) %></p>
                <% end %>
            </div>
            <% if root_placements.present? %>
                <div class="row">
                    <%= render partial: 'category_placement', collection: root_placements, as: :category_placement %>
                </div>
            <% end %>
        </div>
    <% else %>
        <div class="hidden-xs hidden-sm col-md-3 col-lg-3 gs_set-z-1">
          <%= render 'category_placement_nav' %>
        </div>
        <div class="col-xs-12 col-sm-12 col-md-9 col-lg-9" role="main">
            <% if @show_ads %>
                <div class="pvl">
                    <%= render 'layouts/ad_layer', page: @ad_page_name, slot: 'Content_Top'.to_sym, view: :desktop  %>
                    <%= render 'layouts/ad_layer', page: @ad_page_name, slot: 'Content_Top'.to_sym, view: :mobile  %>
                </div>
            <% end %>
            <div class="row">
                <%= render partial: 'category_placement', collection: root_placements, as: :category_placement %>
            </div>
        </div>
    <% end %>
    <%= render 'data_layouts/sticky_nearby_schools' %>
</div>
<%= render 'data_layouts/nearby_schools' %>

<%= render 'nav/school_profile_footer', state: @state, cities: @cities %>
