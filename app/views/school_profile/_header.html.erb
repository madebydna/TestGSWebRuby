<% # this works because the the part of the statement because the conditional will initialize the var to nil %>
<% # the ||= wouldnt do what you might expect here, since the variable in question is a boolean and might be false %>
<% include_contact_info_link = true if include_contact_info_link.nil? %>
<% include_cta_button_group  = true if include_cta_button_group.nil? %>
<% school_profile_decorator = SchoolProfileDecorator.decorate(@school) %>

<div id="school-profile-header" class="header-bg-color ">
    <div class="row pal limit-width-1200 open-sans">
      <div >
        <a class="dn  js-backToCompare">&laquo; <%= t('.back_to_compare') %> <div class="pbm"></div></a>
      </div>
      <div class="pbl">
        <%= render 'shared/breadcrumbs', breadcrumbs: @breadcrumbs, top_margin: 'mtn' %>
      </div>
        <div class="col-xs-12 col-sm-9 col-md-9 col-lg-10 tal clearfix">
          <% if school_profile_decorator.photo.present? %>
            <div class="fl prl pbm">
              <%= link_to(school_url(@school, anchor: 'Media_Gallery')) do %>
                <%= school_profile_decorator.photo.present? ? school_profile_decorator.photo : image_tag(
                    image_path("search/no-school-photo.png"),
                    class: 'thumbnail-border profile-image',
                    alt: "Image provided by GreatSchools."
                ) %>
              <% end %>
            </div>
          <% end %>

            <div class="fl header-title-width" >
                <div class="row">
                    <div class="col-xs-12 col-sm-12 col-md-12 tal pbm notranslate">
                      <span itemscope="" itemtype="http://data-vocabulary.org/Breadcrumb">
                        <%= link_to school_url(@school), itemprop: 'url' do %>
                          <h1 class="mtn pts"><span itemprop="title"><%= @school.name %></span></h1>
                        <% end %>
                      </span>
                    </div>

                    <div class="col-xs-12 col-sm-12 col-md-12 clearfix ptm">
                      <% school_type_link = link_to(school_profile_decorator.school_type_url) do %>
                                  <span class="mls"><%= db_t(school_type_display(@school.type))
                                  %></span>
                      <% end %>
                      <% subheader_content = [
                              school_profile_decorator.process_level,
                              school_type_link,
                              raw('<span class="notranslate">'+@school.city.gs_capitalize_first + ', ' + @school.state.upcase+'</span>'),
                      ].compact %>

                        <% if include_contact_info_link %>
                          <% contact_info_link = link_to(school_url(@school, anchor: 'Contact_this_school'),
                              class: "js-gaClick",
                              data:{ 'ga-click-category' => 'Profile interactions', 'ga-click-action' => 'Contact Info'}) do %>
                            <span class="vam iconx16 i-16-map-pin"></span><span class="mls"><%= t('.contact_info') %></span>
                          <% end %>
                          <% subheader_content << contact_info_link %>
                        <% end %>

                        <% subheader_content.each_with_index do | value, index | %>
                             <% if index == 0  %>
                                <div class="fl prm hvs"> <%= value %></div>
                             <% elsif index + 1 == subheader_content.length %>
                                <div class="fl phm"> <%= value %></div>
                             <% else %>
                                <div class="fl phm hvs"> <%= value %></div>
                             <% end %>
                        <% end %>
                    </div>
                  <div class="col-xs-12 col-sm-12 col-md-12 clearfix ptm">
                    <% if @school.cache_results.present? %>
                        <% students_enrolled = @school.cache_results.students_enrolled %>
                        <% before_care = @school.cache_results.before_care %>
                        <% after_school = @school.cache_results.after_school %>
                        <% if students_enrolled.present? && students_enrolled != '?' %>
                          <div class="fl prm "><%= t('.students_enrolled') %>: <strong><%= students_enrolled %></strong></div>
                        <% end %>
                        <% if before_care.present? && before_care != '?' %>
                            <div class="fl prm">
                              <% if before_care.downcase == 'yes'%>
                                  <%= link_to school_details_url(@school, anchor:"Extracurriculars") do %>
                                    <span class="link-darkgray"><%= t('.before_care') %>: <strong>
                                        <%= t(before_care.downcase, scope: 'school_profile.header') %></strong></span>
                                  <% end %>
                              <% else %>
                                <%= t('.before_care') %>: 
                                <strong>
                                  <%= t(before_care.downcase, scope: 'school_profile.header') %>
                                </strong>
                              <% end %>
                            </div>
                        <% end %>
                        <% if after_school.present? && after_school != '?'%>
                            <div class="fl prm">
                              <% if after_school.downcase == 'yes'%>
                                  <%= link_to school_details_url(@school, anchor:"Extracurriculars") do %>
                                    <span class="link-darkgray"><%= t('.after_care') %>: 
                                      <strong>
                                        <%= t(after_school.downcase, scope: 'school_profile.header') %>
                                    </strong></span>
                                  <% end %>
                              <% else %>
                                <%= t('.after_care') %>: 
                                <strong>
                                  <%= t(after_school.downcase, scope: 'school_profile.header') %>
                                </strong>
                              <% end %>
                            </div>
                        <% end %>
                    <% end %>

                  </div>
                </div>
            </div>
        </div>
        <% if include_cta_button_group %>
          <div class="col-xs-12 col-sm-3 col-md-3 col-lg-2 ptn">
            <div class="row">
              <div class="col-xs-12 col-sm-12 col-md-12 margin-top-mobile">
                <div class="row">
                  <div class="col-xs-12 col-sm-12 col-md-12 pas">
                    <button data-link-value="<%= school_reviews_path(school, anchor: '#topic1') %>"
                            class="btn btn-default tal js-button-link"
                            style="width:100%; padding-left: 8px; font-size: 14px;" 
                            onclick="GS.omniture.track_reviews('Header');">
                            <span class="vam iconx16 i-16-thought-bubble mrm"></span><%= t('.rate_and_review') %>
                    </button>
                  </div>
                  <div class="col-xs-12 col-sm-12 col-md-12 pas">
                    <button class="btn btn-default tal js-save-this-school-button"
                            style="width:100%; padding-left: 8px; font-size: 14px;">
                      <span class="vam iconx16 i-16-heart mrm"></span><%= t('.follow_school') %>
                    </button>
                  </div>
                  <% apply_now_url = school.school_metadata.apply_now_url %>
                  <% if apply_now_url.present? %>
                    <div class="col-xs-12 col-sm-12 col-md-12 pas">
                      <button data-link-value="<%= apply_now_url %>"
                              data-link-use-new-window="true"
                              class="btn btn-default tal js-button-link" style="width:100%; padding-left: 8px; font-size: 14px;">
                              <span class="vam iconx16 i-16-pencil mrm"></span><%= t('.apply') %>
                      </button>
                    </div>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        <% end %>
    </div>
  <% ########################### BEGIN NAV BAR ############################## %>

  <% nav_on_hash = {overview:'', reviews:'', quality:'', details:''} %>
  <% if page_name && !page_name.empty? %>
      <% nav_on_hash[page_name] = 'class=active' %>
  <% end %>

  <div id="navigation2">
      <nav class="nav" id="optimizely-secondary-nav-original">
          <ul>
              <li <%= nav_on_hash[:overview] %>>
              <%= link_to t('.overview'), school_path(school) %>
              </li>
              <li <%= nav_on_hash[:reviews] %>>
                  <%= link_to t('.reviews'), school_reviews_path(school) %>
              </li>
              <li <%= nav_on_hash[:quality] %>>
                  <%= link_to  t('.report_card'), school_quality_path(school) %>
              </li>
              <li <%= nav_on_hash[:details] %>>
                  <%= link_to t('.details'), school_details_path(school) %>
              </li>
          </ul>
      </nav>
  </div>
  <div class="mbl">&nbsp;</div>
  <% ########################### END NAV BAR ############################## %>
</div>
