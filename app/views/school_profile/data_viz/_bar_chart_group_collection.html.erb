<%
  # A bar_chart_group_collection is the first-order grouping described in the
  # group comparison data reader.
%>

<div class="col-xs-12 data-viz-bar-chart">
  <div class='header'>
    <h4 class='title-text'><%= bar_chart_collection.title %></h4>
    <% #<div class='btn btn-sm btn-default pull-left'><%= bar_chart.button_text ></div> %>
  </div>

  <div class='row'>
    <% bar_chart_collection.bar_chart_groups.each do | bar_chart_group | %>
      <%= render partial: 'school_profile/data_viz/bar_chart_group',
                  locals: { bar_chart_group: bar_chart_group } %>
    <% end %>
  </div>
</div>
