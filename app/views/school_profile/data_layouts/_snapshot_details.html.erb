      <% details_v2_hidden = "hidden-lg hidden-md" %>
      <div class="hidden-sm hidden-xs" style="height: 300px;">
      <%= link_to school_details_url(@school, anchor:"Programs") do %>
        <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6"><%= render "icon_content_snapshot",
                                                                    data_local: data[:art],
                                                                    sprite: 'art'  %></div>
      <% end %>
      <%= link_to school_details_url(@school, anchor:"Extracurriculars") do %>
        <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6"><%= render "icon_content_snapshot",
