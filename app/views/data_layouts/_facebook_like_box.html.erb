<% if @school.metadata.facebook_url %>
  <% layout_grid = (@show_ads ?  "col-xs-12 col-sm-6 col-md-6 col-lg-6" : "col-xs-12 col-sm-12 col-md-12 col-lg-12") %>
  <div class="row">
    <div class="<%= layout_grid %> tac">
        <div class="fb-like-box "
          data-href="<%= @school.metadata.facebook_url %>"
          data-width="300"
          data-colorscheme="light"
          data-show-faces="true"
          data-header="false"
          data-stream="false"
          data-show-border="false">
        </div>
    </div>
    <div id="fb-root"></div>
    <% if @show_ads %>
        <div class="mtl <%= layout_grid %>">
            <%= render 'layouts/ad_layer', page: ('School_'+@page_config.name).to_sym, slot: :Facebook, view: :desktop  %>
        </div>
    <% end %>
  </div>
  <% if @show_ads %>
    <div class="ptl mtl">
     <%= render 'layouts/ad_layer', page: ('School_'+@page_config.name).to_sym, slot: :Facebook, view: :mobile  %>
    </div>
  <% end %>
<% end %>