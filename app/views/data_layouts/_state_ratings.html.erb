<% if !data["state_rating"].nil? && !data["state_rating"]["overall_rating"].nil? %>

    <div class="row mbl pam">
        <% color_hash = {"Green" => "#009900", "Lime" => "#99FF66", "Yellow" => "#FFFF00", "Orange" => "#FF9900", "Red" => "#FF3300"} %>
        <div class="col-xs-12 col-sm-2 col-md-2 col-lg-2">
            <div class="tac" style="width: 72px; height: 58px; background-color: <%= color_hash[data["state_rating"]["overall_rating"]] %>">
                <div class="ptl black"><%= data["state_rating"]["overall_rating"] %></div>
            </div>
       </div>
        <div class="col-xs-12 col-sm-10 col-md-10 col-lg-10"><h5>State Rating</h5>
            <%= data["state_rating"]["description"] %></div>
    </div>
<% end %>
