<% if @school.cache_results.progress_bar.present? %>
    <%= render layout:'col', locals:{ css_class:'', category_placement: category_placement} do  %>
    <%= render "shared/section_header", category_placement:category_placement %>

    <% progress_bar_percent_hash = [ 15, 50, 75, 97 ] %>
    <% progress_bar_text_hash = [ t('views.data_layouts.progress_bar.basic'), t('views.data_layouts.progress_bar.intermediate'), t('views.data_layouts.progress_bar.advanced'), t('views.data_layouts.progress_bar.honor_roll') ] %>
    <% score = @school.cache_results.progress_bar["total_completeness_score"] %>

    <div class="row mtl">
        <div class="col-xs-offset-2 col-xs-8 col-sm-offset-3 col-sm-6 col-md-offset-4 col-md-4 progress progress-striped mbs">
            <div class="progress-bar phm" style="width: <%= progress_bar_percent_hash[score] %>%;"></div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12 tac font-size-xl open-sans_sb"><%= progress_bar_text_hash[score] %></div>
        <div class="col-md-12 tac mbm">
            <div><a href="javascript:void(0)" class="js_toggle_parent_sib font-size-small"><%= t('views.data_layouts.progress_bar.learn_more') %> &raquo;</a></div>
            <div class="dn tal well ma pal" style="max-width: 600px;">
                <%=  t('views.data_layouts.progress_bar.learn_more_text_html')  %>
            </div>
        </div>
        <div class="col-md-12 tac text_green font-size-block mtl"><%= t('views.data_layouts.progress_bar.improve_profile') %></div>
    </div>

        <div class="row">

          <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6 mtl">
            <div class="tac font-size-xl"><%= t('views.data_layouts.progress_bar.parents_call_out') %></div>

            <div class="tac">
              <button type="button" data-ga-click-label="ProgressBar Review" data-ga-click-value="<%= score %>"
                      data-link-value="<%= school_reviews_path(@school) %>" class="btn btn-default js-button-link js-gaClick mas" onclick="GS.omniture.track_reviews('Overview');">
                  <span class="iconx24-icons i-24-write-review vam mrm"></span><%= t('views.data_layouts.progress_bar.write_review') %>
              </button>
            </div>
          </div>

          <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6 mtl">
            <div class="tac font-size-xl"><%= t('views.data_layouts.progress_bar.schools_call_out') %></div>

            <div class="tac">
              <button type="button" data-link-value="<%= osp_register_url(city: @school.city,school_id: @school.id.to_s,state: @school.state) %>" class="btn btn-default js-button-link mas">
                <span class="iconx24-icons i-24-upload-photos vam mrm"></span><%= t('views.data_layouts.progress_bar.upload_photos') %>
              </button>
              <button type="button" data-link-value="<%= osp_register_url(city: @school.city,school_id: @school.id.to_s,state: @school.state) %>" class="btn btn-default js-button-link mas">
                  <span class="iconx24-icons i-24-answer-questions vam mrm"></span><%= t('views.data_layouts.progress_bar.answer_questions') %>
              </button>
            </div>
          </div>

        </div>
<div class="mbl">&nbsp;</div>


<% end %>
<% end %>
