<% category_placement # The +CategoryPlacement+ that is configured to show this layout %>

<% gs_rating = @school.gs_rating || 'nr' %>
<div class="link-darkgray row tac">GreatSchools rating</div>
<div class="row"><%= render "shared/rating/gs_rating", rating:gs_rating %></div>

<% ratings_text_array = [] %>
<% ratings_array = [] %>

<% state_rating = @school.state_rating %>
<% if state_rating %>
    <% ratings_text_array << (@school.state == 'CA' ? 'API score' : 'State rating') %>
    <% ratings_array << (render state_partial(@school.state), page:'overview', rating: state_rating) %>
<% end %>

<% local_rating = @school.local_rating %>
<% if local_rating %>
        <% ratings_text_array << 'ESD rating' %>
        <% ratings_array << (render "shared/rating/variable_icon_rating", icon_to_use:'iconx72-ESD-ratings', icon_to_choose:'i-72-ratings-',rating:@school.local_rating) %>
<% end %>

<% if @school.preK_star_rating %>
        <% ratings_text_array << 'Preschool rating' %>
    <% if @school.state == 'MI' %>
        <% ratings_array << ( render "shared/rating/detroit_blue_star", rating:@school.preK_star_rating) %>
    <% else %>
        <% ratings_array << ( render state_partial(@school.state), page:'overview', rating:@school.preK_star_rating) %>
    <% end %>
<% end %>

<% if ratings_array.present?%>
    <div class="row tac">
      <%= raw render_array_horizontally ratings_text_array, {"xs"=> 12,"sm"=> 6,"md"=> 4,"lg"=> 3} %>
    </div>
    <div class="row">
      <%= raw render_array_horizontally ratings_array, {"xs"=> 12,"sm"=> 6,"md"=> 4,"lg"=> 3} %>
    </div>
<% end %>

<div class="row">
    <div class=" col-xs-12 col-sm-6 col-md-6 col-lg-6 tac fl"><%= link_to 'Test scores', school_quality_url(@school, anchor:"Test_scores") %></div>
    <div class=" col-xs-12 col-sm-6 col-md-6 col-lg-6 tac clearfix"><%= link_to 'Ratings', school_quality_url(@school, anchor:"Ratings") %></div>
</div>