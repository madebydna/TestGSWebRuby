  <% neighbors = NearbySchoolDecorator.decorate_collection(@school.neighbors) %>
  <% if neighbors.size >= 4 %>
    <div class="limit-width-1200 clearfix pam">
      <hr/>
      <div class="clearfix mbm">
        <div class="fl">
            <h2 class="mvn">Nearby schools</h2>
        </div>
      </div>
      <div class="row">
        <% neighbors[0..3].each_with_index do |neighbor, index| %>
          <%= neighbor.link_to_overview do %>
            <%= div_tag(class: 'pbm link-darkgray', sizes: { xs: 12, sm: 6, md: 3, lg: 3 }) do %>
              <div class="partner-carousel-image mam">
                <div class="ma oh hidden-xs" style="width: 100%;">
                  <%= neighbor.photo(450,150) %>
                </div>
                <div class="pam">
                  <div class="clearfix">
                    <div class="fl prm">
                      <span class="vam iconx24-ratings i-24-ratings-<%= neighbor.great_schools_rating %>"></span>
                    </div>
                    <div class="fl" style="width: 80%;">
                      <span class="open-sans_b">
                        <%= neighbor.name %>
                      </span>
                      <br/>
                      <%= neighbor.city_state %>
                      <br/>
                      <%= neighbor.type %> | <%= neighbor.process_level %>
                    </div>
                  </div>
                  
                </div>
              </div>
            <% end %>
          <% end %>
        <% end %>
      </div>
    </div>
  <% end %>