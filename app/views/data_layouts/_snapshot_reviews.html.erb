<% average_score = @school_reviews_global.rating_averages.overall.avg_score %>
<% ratings_count = @school_reviews_global.rating_averages.overall.counter %>
<% school_reviews = @school.reviews %>


<div class="tac" style="height:300px;">
<%= link_to school_reviews_url(@school) do %><div class="link-darkgray tac pbl">Community rating</div><% end %>

<div class="row tac mtm">
  <% if average_score > 0  %>
      <%= link_to school_reviews_url(@school) do %>
        <%= draw_stars_24 average_score %>
      <% end %>
  <% else %>
      <a href="<%=school_review_form_path(@school)%>"><%= draw_stars_24 0 %></a>
  <% end %>
</div>


<div class="tac mtxl ptm">

  <% if school_reviews.present? &&  school_reviews.first.comments.present? %>
    <div class="col-xs-12 col-sm-8 col-sm-offset-2">
      <%= link_to school_reviews_url(@school) do %>
          <div class="gray-dark font-size-large">"<%=  truncate(school_reviews.first.comments,:length => 45,
                                                                separator: ' ') %>"</div>
      <% end %>
    </div>
  <% else %>
      <div>Help others find their GreatSchool!</div>
      <div>Rate and review this schools now!</div>
  <% end %>
</div>

<div class="tac pa full-width" style="bottom: 20px;">
<% if ratings_count > 0 %>
      <% reviews_count_text = pluralize ratings_count, 'Review' %>
      <%= link_to reviews_count_text, school_reviews_url(@school)%>
<% else %>
    <button type="button" data-link-value="<%= school_review_form_path(@school) %>" class="btn btn-primary mtm js-button-link">
      Write a review
    </button>
<% end %>
</div>
</div>