<% average_score = @school_reviews_global.rating_averages.overall.avg_score %>
<% ratings_count = @school_reviews_global.rating_averages.overall.counter %>
<% school_reviews = @school.reviews %>

<span class="mrs link-darkgray">Community rating:</span>
<% if average_score > 0  %>
    <span class="mt2 vam">
        <%= draw_stars_16 average_score %>
    </span>
<% else %>
    <span class="mt2 vam">
      <a href="<%=school_review_form_path(@school)%>"><%= draw_stars_16 0 %></a>
    </span>
<% end %>

<% if school_reviews.present? %>
    "<%=  truncate(school_reviews.first.comments,:length => 40) %>"
<% else %>
    <div>Help others find their GreatSchool!</div>
    <div>Rate and review this schools now!</div>
<% end %>

<% if ratings_count > 0 %>
    <span> <%= pluralize ratings_count, 'Reviews' %></span>
<% else %>
    <button type="button" data-link-value="<%= school_review_form_path(@school) %>" class="btn btn-primary mtm js-button-link">
      Write a review
    </button>
<% end %>
