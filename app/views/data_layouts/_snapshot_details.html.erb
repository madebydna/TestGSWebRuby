<div class="row">
  <% if @school.includes_level_code? (['e','m','h']) %>
      <!-- Hack for Safari on IOS  -- using ad page name -->
      <% append_page = "" %>
      <% if @ad_page_name != :School_Details %>
          <% append_page = "details/" %>
      <% end %>
      <a href="<%= append_page %>#Programs">
        <div class="col-xs-12 col-sm-6 col-md-3 col-lg-3"><%= render "shared/icon_content_snapshot", data_local: data[:art], sprite: 'art'  %></div>
      </a>
      <a href="<%= append_page %>#Extracurriculars">
        <div class="col-xs-12 col-sm-6 col-md-3 col-lg-3"><%= render "shared/icon_content_snapshot", data_local: data[:club], sprite: 'clubs'  %></div>
      </a>
      <a href="<%= append_page %>#Extracurriculars">
        <div class="col-xs-12 col-sm-6 col-md-3 col-lg-3"><%= render "shared/icon_content_snapshot", data_local: data[:sport], sprite: 'sports'  %></div>
      </a>
      <a href="<%= append_page %>#Programs">
        <div class="col-xs-12 col-sm-6 col-md-3 col-lg-3"><%= render "shared/icon_content_snapshot", data_local: data[:lang], sprite: 'language'  %></div>
      </a>
  <% end %>
</div>










