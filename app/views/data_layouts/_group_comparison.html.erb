<div class="container-fluid js-barChart">
  <div class="row">
    <div class="col-lg-3">
      <div class="dropdown">
        <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
          Another Dropdown
          <span class="caret"></span>
        </button>
        <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
          <li><a href="#">Action</a></li>
          <li><a href="#">Another action</a></li>
        </ul>
      </div>
    </div>

    <div class="col-lg-3">
      <%= select_tag 'subgroup', options_for_select(data.map{|bar_chart_collection| [bar_chart_collection.title]}), class:'selectpicker' %>
    </div>
  </div>

  <% data.each do |bar_chart_collection| %>
      <%= render partial: 'school_profile/data_viz/bar_chart_collection',
                 locals: {bar_chart_collection: bar_chart_collection} %>
  <% end %>

</div>

