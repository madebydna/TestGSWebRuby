<% data # A +Hash+ that contains a gs_rating +Hash+ if available %>
<%= debug data if params[:debug] %>
<% category_placement # The +CategoryPlacement+ that this table is for %>
<% data_config = category_placement.layout_config_json %>
<% rating_type = (data_config || {}).fetch('rating_type', 'gs') %>
<% rating_hash = data["#{rating_type}_rating"] %>

<% if rating_hash.present? && rating_hash["overall_rating"].present? %>
  <div class="row mbm pam">
    <div class="col-xs-12 col-sm-3 col-md-2 col-lg-2">
    <% icon_class = 'iconx72-ratings' %>
    <% ratings_class = 'i-72-ratings-'  %>
    <%  if I18n.default_locale != I18n.locale %>
      <% icon_class = icon_class + '-' + I18n.non_default_locale.to_s %> 
      <%  ratings_class = ratings_class + I18n.non_default_locale.to_s + '-' %>
    <% end  %> 
    <span class="<%= icon_class  %> <%= ratings_class + rating_hash["overall_rating"] %>"></span>
    </div>
    <% label = rating_hash['label'] || t('.greatschools_rating') %>
    <div class="col-xs-12 col-sm-9 col-md-10 col-lg-10">
      <h4><%= label %></h4>
      <% if rating_hash["disclaimer_private"].present? && @school.private_school? && @school.gs_rating != 'nr' %>
        <p class="alert alert-warning man mbm"><%= db_t(rating_hash["disclaimer_private"]).html_safe %></p>
      <% end %>
        <% if rating_hash["what_is_not_rated"].present? && !@school.preschool? %>
            <p class="alert alert-warning man mbm"><%= db_t(rating_hash["what_is_not_rated"]).html_safe %></p>
        <% end %>
    <p><%= db_t(rating_hash["description"]) %></p>
      <% if rating_hash["rating_breakdowns"].present? || rating_hash["methodology_url"].present? %>
        <p><a href="javascript:void(0)" class="js_toggle_parent_sib"><%= t('.learn_more_html') %></a></p>
        <div class="dn well bg-white">
            <% if rating_hash["rating_breakdowns"].present? %>
              <h5><%= t('.rating_breakdown') %></h5>
              <table class="table table-striped">
                <% rating_hash["rating_breakdowns"].each do |key, value| %>
                  <tr><td><%= db_t(key) %></td><td><%= value['rating'] %></td></tr>
                  <tr><td colspan="2"><%= value['description'] %></td></tr>
                <% end %>
              </table>
            <% end %>
          <% if rating_hash["methodology_url"].present? %>
            <h5><%= t('.methodology') %></h5>
            <a href="<%= rating_hash["methodology_url"] %>" target="_blank"><%= t('.view_more_details') %></a>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
<% end %>


