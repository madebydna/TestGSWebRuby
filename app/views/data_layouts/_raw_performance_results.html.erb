<% box_group_type = data.size % 2 == 0 ? 'box-group-inline' : '' %>
<div class="raw-performance-results">
  <div class="box-group <%= box_group_type %>">
    <% data.each do |data_point| %>
      <div class="box performance-box">
        <span><%= data_point.label %></span>
        <div class="dib state-average">(<%= t('.state_average', val: data_point.comparison_value) %>)</div>
        <div class="pvl">
          <%= render 'performance/percent_value', value: data_point.value, performance_level: data_point.performance_level %>
        </div>
      </div>
    <% end %>
  </div>
</div>
