<% state %>
<%= render 'shared/sign_up_for_updates' %>

<div class="row invert-colors">
  <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 tac pam">
    <div class="limit-width-1200 open-sans">
      <%= render 'shared/about_gs_footer' %>

      <%= render 'shared/popular_cities_in_state', state: state %>

      <span class='gray-dark'>All cities in <%= state[:long].titleize %>:</span>

      <ul class='di'>
        <% ('A'..'Z').to_a.each do |letter| %>
          <li class='di'><%= link_to(letter, city_alphabet_path(state[:long].capitalize, state[:short].upcase, letter)) %></li>
        <% end %>
      </ul>

      <hr/>

      <%= render 'shared/gs_address_and_copyright' %>

    </div>
  </div>
</div>
