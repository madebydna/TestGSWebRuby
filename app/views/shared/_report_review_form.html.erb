<%= form_for(ReviewFlag.new, html: {'data-parsley-namespace' => 'data-parsley-', :class => 'parsley-form', role: 'form'}, url: flag_review_path(id: '0')) do |f| %>
    <fieldset>
      <div class="form-group mtm">
        <p class="open-sans_sb"><%= t('.report_review') %></p>
        <label class="control-label pull-left pbl" for="textarea">
          <%= t('.terms_of_use_message') %> <%= link_to(t('.terms_of_use'), terms_of_use_url, target: '_blank') %>
          <%= t('.or') %> <%= link_to t('.school_review_guidelines'), school_review_guidelines_url, target: '_blank' %>:
        </label>
        <div class="controls">
          <%= f.text_area :comment, value: '', rows: 5, class: 'input-xlarge', 'data-parsley-required' => 'true', 'data-parsley-trigger' => 'change', 'style' => 'width: 100%' %>
        </div>
      </div>

      <div class="form-actions pull-right">
        <%= button_tag t('.submit'), type:'submit', class: 'btn btn-primary', data: { disable_with: t('.reporting') } %>
        <a href="javascript:void(0);" class="phm js-report-review-form-cancel"><%= t('.cancel') %></a>
      </div>
    </fieldset>
<% end %>
