<% review = SchoolProfileReviewDecorator.decorate(review) %>
<div id="review<%= review.id %>" class="link-down-compensate"></div>
<% include_rich_snippets ||= false %>
<% if @school.show_ads %>
  <% ad_placement_array = [2, 5, 8] %>
  <% if ad_placement_array.include? review_counter %>
    <hr />
    <div width="100%">
      <div class="js_insertAdvertisingReview ma"></div>
    </div>
    <%= render partial: '/shared/advertising_word' %>
  <% end %>
<% end %>
<hr />
<% if (review.school_user && review.school_user.principal?) %>
    <div class="row mam cuc_review" itemscope="" itemtype="http://data-vocabulary.org/Review">
      <div class="rs-review-value mbs">
        <span class="open-sans_i"><%= review.topic_markup || t('.school_leader_message') %></span>
      </div>
      <div class="open-sans_cb mbs"><%= t('.school_leader') %></div>
      <div class="open-sans"> <%= review.comment %></div>
      <div class="clearfix">
        <div class="rs-review-posted mts fr"><%= t('.posted') %> <%= review.posted %></div>
      </div>
      <%= render 'shared/report_and_helpful_review_buttons', review: review %>
      <div style="display:none;">
        <%= div_tag sizes: {xs: 12, sm: 12, md: 12, lg: 12}, class: "js-report-review-container-#{review.id}" %>
      </div>
    </div>
<% else %>
    <div class="row mam cuc_review" itemscope="" itemtype="http://data-vocabulary.org/Review">
      <% if include_rich_snippets %>
          <span itemprop="itemreviewed" class="dn"><%= @school.name %></span>
          <time itemprop="dtreviewed" class="dn" datetime="<%= review.posted %>"></time>
          <span itemprop="rating" class="dn"><%= review.star_rating %></span>
      <% end %>

      <%= div_tag sizes: {xs: 12, sm: 4, md: 3, lg: 3}, class: 'pbm' do %>
          <div class="open-sans_i rs-review-value">
            <%= review.topic_markup %>
            <span class="open-sans_cb">
                <%= review.answer_markup %>
            </span>
          </div>
          <br/><span class="rs-review-posted"><%= t('.posted') %> <%= review.posted %></span><br/>
          <%= t('.user_type_html', user_type: review.user_type)  %>
      <% end %>

      <%= div_tag sizes: {xs: 12, sm: 8, md: 9, lg: 9} do %>
        <% if review.comment.present? %>
          <% if include_rich_snippets %>
            <span itemprop="description"><%= review.comment %></span>
          <% else %>
            <%= review.comment %>
          <% end %>
        <% else %>
          <div class="well mbn"><%= t('.no_content_message') %></div>
        <% end %>
        <%= render 'shared/report_and_helpful_review_buttons', review: review %>
      <% end %>

      <div style="display:none;">
        <%= div_tag sizes: {xs: 12, sm: 4, md: 3, lg: 3} %>
        <%= div_tag sizes: {xs: 12, sm: 8, md: 9, lg: 9}, class: "js-report-review-container-#{review.id}" %>
      </div>
    </div>
<% end %>


<% unique_content_for :global_hidden_content do %>
  <div class="js-report-review-form-template rs-report-review-form">
    <%= render 'shared/report_review_form' %>
  </div>
<% end %>
