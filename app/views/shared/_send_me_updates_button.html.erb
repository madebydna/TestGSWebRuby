<%= form_for Subscription.new do |f| %>
    <%= f.hidden_field :list, :value => school.private_school? ? 'mystat_private' : 'mystat' %>
    <%= f.hidden_field :school_id, :value => school.id %>
    <%= f.hidden_field :state, :value => school.state %>
    <%= f.hidden_field :message, :value => "You've signed up to receive updates on #{school.name}" %>

    <%= f.submit 'Send updates', class: 'btn btn-default', style: 'width:100%' %>
<% end %>