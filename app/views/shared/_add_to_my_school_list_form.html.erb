<% school # The +School+ to save to the user's My School List %>


  <%= form_for FavoriteSchool.new, url: favorite_schools_url, html: { class: 'js-save-this-school-form' } do |f| %>
    <%= f.hidden_field :school_id, :value => school.id %>
    <%= f.hidden_field :state, :value => school.state %>
    <%= f.hidden_field :driver, :value => driver %>

  <% end %>

