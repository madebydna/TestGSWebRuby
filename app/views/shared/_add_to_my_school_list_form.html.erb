<% unique_content_for :global_hidden_content do %>
  <%= form_for FavoriteSchool.new, url: favorite_schools_url, html: { id: 'js-save-this-school-form' } do |f| %>
    <%= f.hidden_field :school_id, :value => school.id %>
    <%= f.hidden_field :state, :value => school.state %>
    <%= f.hidden_field :message, :value => t('actions.my_school_list.school_added', school_name: school.name) %>
  <% end %>
<% end %>