<% if @school %>
  <% showAds = @school.show_ads %>
  <div class="row mtl invert-colors">
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 tac pam mtl">
      <div class="limit_width_1200 row text-left pbl">
        <a name="ContactInfo"><p class="link_down_compensate"></p></a>

        <h2>Contact Information</h2>

        <div class="row">

          <p class="col-sm-4 col-md-4 col-lg-5 contact_content">
            <span><%= @school.street %></span><br/>
            <span><%= "#{@school.city}, #{@school.state} #{@school.zipcode}" %></span><br/>
            <br/>
            <% if @school.home_page_url.present? %>
                  <span class="iconx16 i-16-computer-screen vam"></span><a class="mlm vam contact_content" href='<%= prepend_http(@school.home_page_url) %>' target="_blank">School website</a><br/>
            <% end %>
            <% if @school.phone.present? %>
                  <span class="iconx16 i-16-phone vam"></span><span class="mlm vam"><%= @school.phone %></span><br/>
            <% end %>
            <% if @school.fax.present? %>
                <span class="iconx16 i-16-fax vam"></span><span class="mlm vam"><%= @school.fax %></span>
            <% end %>
          </p>

          <div class="col-sm-8 col-md-8 col-lg-7 pbl ">
            <%= image_tag('pixel.gif', class: 'contact-map-image js-contact_map_image pbm') %>
              <br /><span class="iconx16 i-16-home vam"></span><a
                                                            class="mlm vam contact_content"
                                                            href="<%= zillow_url ( @school ) %>"
                                                            onclick="if (s.tl) {s.tl(this,'o', 'Zillow_'+gon.omniture_pagename);} return true;"
                                                            target="_blank">Nearby homes for sale</a>

          </div>
        </div>
      </div>
    </div>
      <% if showAds %>
          <% slotNameContact = "School_" + @page_config.name + "_Contact_Info_728x90" %>
          <% slotNameContactMobile = "School_" + @page_config.name + "_Mobile_Contact_Info_300x250" %>
          <div class="gs_ad_slot visible-lg visible-md visible-sm ma" id="contactInfoBottomAd" data-ad-size="[728,90]" style="width: 728px"  data-dfp="<%= slotNameContact %>"></div>
          <div class="pln">
              <div class="gs_ad_slot visible-xs ma" id="contactInfoBottomAdMobile" data-ad-size="[300,250]" style="width: 320px" data-dfp="<%= slotNameContactMobile %>"></div>
          </div>
      <% end %>
  </div>
<% end %>