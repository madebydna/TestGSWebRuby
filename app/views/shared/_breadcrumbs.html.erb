<% breadcrumbs # An +Array+ of +Hash+es, each +Hash+ containing a breadcrumb text and url %>
<% unless defined?(top_margin) %>
  <% top_margin = 'mtm' %>
<% end %>
<% unless defined?(inverted) %>
  <% inverted = false %>
<% end %>
<% unless breadcrumbs.nil? || breadcrumbs.empty? %>
  <div class="row <%= top_margin %> pls gs_set-z-1">
    <div class="col-xs-12 font-size-small <%= inverted ? 'inverted-text' : '' %>">
      <% breadcrumbs.each_with_index do |(text, url), index| %>
        <%= ' / ' if index > 0 %>
        <% if url.nil? %>
          <span class="gray-dark"><%= text %></span>
        <% else %>
          <span itemscope itemtype="http://data-vocabulary.org/Breadcrumb">
            <%= link_to url, itemprop:'url', class: (inverted ? 'inverted-text' : '') do
              %><span itemprop="title" class="font-size-small"><%= text %></span><%
            end %>
          </span>
        <% end %>
      <% end %>
    </div>
  </div>
<% end %>
