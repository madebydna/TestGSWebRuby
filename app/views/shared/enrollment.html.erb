<% content_for :javascript_includes do %>
  <%= javascript_include_tag "cycle/jquery.cycle2.js" %>
  <%= javascript_include_tag "cycle/jquery.cycle2.carousel.js" %>
  <script>
    $(document).ready(function() {
      GS.viewMoreCollapseInit({'foldHeight': 292 });
      GS.customCarouselControl.cycle2Carousel.enableMultipleCarouselsNav();
    });
  </script>
<% end %>

<%= render 'nav/topnav' %>
<%= render 'nav/search_bar', state: @state, collection_id: @collection_id, collection_nickname: @collection_nickname %>

<% unless @events.nil? ||  @events[:events].empty? %>
  <%= render 'cities/upcoming_events', important_events: @events, community_page: true %>
<% end %>


<div class="limit-width-1200 mbl">
  <%= render 'shared/breadcrumbs', breadcrumbs: @breadcrumbs %>

  <!-- Sins. -->
  <div class="row mtl" style='margin-bottom: 60px;'>
    <div class="hidden-lg hidden-md hidden-sm" style='width: 100%; left: 0;'>
      <div style="background-image: url(<%= image_path('hubs/small/enrollment_small.png') %>); height: 130px; background-position: center; background-repeat: no-repeat; width: 100%; background-size: 60% 80%;"></div>
    </div>
    <div class="hidden-xs" style='width: 100%; left: 0;'>
      <div style="background-image: url(<%= image_path('hubs/enrollment.png') %>); height: 185px; background-position: center; background-repeat: no-repeat; width: 100%; background-size: 40% 80%;"></div>
    </div>
  </div>


  <h1 class='tac'>Enrollment Information</h1>
  <% if @subheading[:error] %>
    <h3 class='tac'>Error: <%= @subheading[:error] %></h3>
  <% else %>
    <p class='col-xs-12 col-sm-6 col-md-6 col-lg-7 ma fn phm tac'><%= @subheading[:content] %></p>
  <% end %>

  <div class='tac mtl'>
    <ul class='nav nav-pills' style='margin-bottom: 80px'>
      <% if params[:city] %>
        <li style='float: none; display: inline-block;' class="<%= 'active' if params[:tab] == nil %>">
          <%= link_to('Preschools', city_enrollment_path(params[:state], params[:city]), class: 'link-darkgray') %>
        </li>
        <li style='float: none; display: inline-block;' class="<%= 'active' if params[:tab] == 'elementary' %>">
          <%= link_to('Elementary schools', city_enrollment_path(params[:state], params[:city]) + 'elementary', class: 'link-darkgray') %>
        </li>
        <li style='float: none; display: inline-block;' class="<%= 'active' if params[:tab] == 'middle' %>">
          <%= link_to('Middle schools', city_enrollment_path(params[:state], params[:city]) + 'middle', class: 'link-darkgray') %>
        </li>
        <li style='float: none; display: inline-block;' class="<%= 'active' if params[:tab] == 'high' %>">
          <%= link_to('High schools', city_enrollment_path(params[:state], params[:city]) + 'high', class: 'link-darkgray') %>
        </li>
      <% else %>
        <li style='float: none; display: inline-block;' class="<%= 'active' if params[:tab] == nil %>">
          <%= link_to('Preschools', state_enrollment_path(params[:state]), class: 'link-darkgray') %>
        </li>
        <li style='float: none; display: inline-block;' class="<%= 'active' if params[:tab] == 'elementary' %>">
          <%= link_to('Elementary schools', state_enrollment_path(params[:state]) + 'elementary', class: 'link-darkgray') %>
        </li>
        <li style='float: none; display: inline-block;' class="<%= 'active' if params[:tab] == 'middle' %>">
          <%= link_to('Middle schools', state_enrollment_path(params[:state]) + 'middle', class: 'link-darkgray') %>
        </li>
        <li style='float: none; display: inline-block;' class="<%= 'active' if params[:tab] == 'high' %>">
          <%= link_to('High schools', state_enrollment_path(params[:state]) + 'high', class: 'link-darkgray') %>
        </li>
      <% end %>
    </ul>
  </div>

  <%= render 'shared/enrollment_module', collection_nickname: @collection_nickname, city: @city, state: @state, tab: @tab, enrollment_module: @enrollment_module, tips: @tips, type: :public, key_dates: @key_dates %>
  <hr class="dib">
  <hr style='clear: both; margin-top: 70px; margin-bottom: 70px;'>
  <%= render 'shared/enrollment_module', collection_nickname: @collection_nickname, city: @city, state: @state, tab: @tab, enrollment_module: @enrollment_module, tips: @tips, type: :private, key_dates: @key_dates %>

  </div>
</div>

<div class="mtl">
  <%= render 'shared/state_footer', state: @state, cities: @cities %>
</div>
