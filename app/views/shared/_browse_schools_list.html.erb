<% unless defined?(mobile) %>
    <% mobile = false %>
<% end %>
<% if mobile %>
    <div class="<%= school_breakdown_klass %> zir-1 pln hidden-lg hidden-md col-12-sm col-12-xs">
<% else %>
    <div class="<%= school_breakdown_klass %> pln col-lg-4 col-md-4 hidden-sm hidden-xs">
<% end %>
<h4 class='pbs mvn brand-secondary'>Browse schools</h4>
  <ul class='pln'>
    <% browse_links.each do |link| %>
        <li class='mvm'>
          <%= link_to link[:label], link[:link], class: 'sm-black-lg-white-text pvm js-browseSchools' %>
        </li>
    <% end %>
  </ul>
</div>