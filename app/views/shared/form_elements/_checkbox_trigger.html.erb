<% button_classes ||= '' #optional %>
<% button_classes << ' btn btn-checkbox-square' #add default classes%>
<% icon_classes ||= ' checkbox-square-icon' #optionl. %>
<% text ||= '' #optional %>
<% text_classes ||= 'font-size-medium' #optional %>

<% active ||= false #optional %>
<% button_classes << icon_classes #add default classes%>

<label class="pointer">
  <input class="<%= button_classes %>  <%= 'active' if active %>"
    type="button"
    data-toggle="button"
  />
  <% if text.present? %>
    <span class=<%=text_classes%>><%=text%></span>
  <% end %>
</label>