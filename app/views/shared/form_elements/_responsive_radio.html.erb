<% text_value_pair %>
<% key %>
<% active_value ||= nil %>

<div class="js-responsiveRadioGroup">

  <% #rendering a horizontal(sm,md,lg) and vertical(xs) button group for desktop %>
  <% ['btn-group hidden-xs', 'btn-group-vertical visible-xs maxw-400'].each do | classes | %>

    <div class="<%= classes %>" role="group" data-toggle="buttons">

      <% #rendering each radio button %>
      <% text_value_pair.each do |text, value| %>
        <% # The value must be downcased because there are OSP displayed question answers   %> 
        <% # with values that are capitalized.  If you change this downcase you will need to %> 
        <% # update the osp display question values in the database %>
        <% active = value.to_s.downcase == active_value %>
        <div class="btn btn-toggle js-responsiveRadio <%= 'active' if active %>" data-value="<%= value %>" >
          <%= text %>
          <input type="radio" <%= "name=#{key} value=#{value}" %> <%= 'checked' if active %>/>
        </div>
      <% end %>

    </div>

  <% end %>
</div>
