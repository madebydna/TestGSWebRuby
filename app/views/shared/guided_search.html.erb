<%= render 'nav/topnav', hub_params: @hub_params %>
<div class="limit-width-940 tac pas primary-bg-color mtl" >
  <h3 class="text_fff">Help me find a School</h3>
</div>
<div class="limit-width-940 border-all-light-grey">
  <ul class="nav nav-tabs" >

    <li class="tac active tab_<%= @guided_search_tab[0]%>" >
      <p class="pvm">
        <span class="js-tab-number subtitle-lg open-sans_sb" >1</span>
        <span class='dn js-tab-check iconx24-icons i-24-checkmark-on mt6'></span>
        <span class="hidden-xs gray-dark">Get Started</span></p>
    </li>
    <li class="tac tab_<%= @guided_search_tab[1]%>">
      <p class="pvm">
        <span class="js-tab-number subtitle-lg open-sans_sb">2</span>
        <span class='dn js-tab-check iconx24-icons i-24-checkmark-on mt6'></span>
        <span class="hidden-xs gray-dark">Child Care</span></p>

    </li>
    <li class="tac tab_<%= @guided_search_tab[2]%>">
      <p class="pvm">
        <span class="js-tab-number subtitle-lg open-sans_sb">3</span>
        <span class='dn js-tab-check iconx24-icons i-24-checkmark-on mt6'></span>
        <span class="hidden-xs gray-dark">Dress Code</span></p></li>
    <li class="tac tab_<%= @guided_search_tab[3]%>">
      <p class="pvm">
        <span class="js-tab-number subtitle-lg open-sans_sb">4</span>
        <span class='dn js-tab-check iconx24-icons i-24-checkmark-on mt6'></span>
        <span class="hidden-xs gray-dark">School Focus</span></p></li>
    <li class="tac tab_<%= @guided_search_tab[4]%>">
       <p class="pvm tab_last">
        <span class="js-tab-number subtitle-lg open-sans_sb">5</span>
        <span class='dn js-tab-check iconx24-icons i-24-checkmark-on mt6'></span>
        <span class="hidden-xs gray-dark">Class Offerings</span>
       </p>
    </li>
  </ul>
  <div id="my-tab-content" class="tab-content">
    <div class="tab-pane active" id="<%= @guided_search_tab[0]%>">
      <h4 class="tac brand-primary mbl">Get started as easy as 1-2-3!</h4>
      <h4 class="mtl pll"><span class="brand-primary">1.</span> Tell us what you're looking for</h4>
      <h4 class="mtl pll"><span class="brand-primary">2.</span> See which schools are a good match</h4>
      <h4 class="mtl pll"><span class="brand-primary">3.</span> Save your favorites so you can visit, apply and get updates</h4>

      <%=render 'shared/guided_search/button_navigation', next_tab_name: @guided_search_tab[1]%>
    </div>
    <div class="tab-pane" id="<%= @guided_search_tab[1]%>">
      <h4 class="tac brand-primary mbl">Step 2</h4>
      <%=render 'shared/guided_search/button_navigation', next_tab_name: @guided_search_tab[2], previous_tab_name: @guided_search_tab[0]%>

    </div>
    <div class="tab-pane" id="<%= @guided_search_tab[2]%>">
      <h4 class="tac brand-primary mbl">Step 3</h4>
      <%=render 'shared/guided_search/button_navigation', next_tab_name: @guided_search_tab[3], previous_tab_name: @guided_search_tab[1]%>

    </div>
    <div class="tab-pane" id="<%= @guided_search_tab[3]%>">
      <h4 class="tac brand-primary mbl">Step 4</h4>
      <%=render 'shared/guided_search/button_navigation', next_tab_name: @guided_search_tab[4], previous_tab_name: @guided_search_tab[2]%>

    </div>
    <div class="tab-pane" id="<%= @guided_search_tab[4]%>">
      <h4 class="tac brand-primary mbl">Step 5</h4>
      <%=render 'shared/guided_search/button_navigation', previous_tab_name: @guided_search_tab[3]%>

    </div>
  </div>
</div>