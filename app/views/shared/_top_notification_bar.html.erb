<div id="js-top-notification-bar" style="display:none; margin-top: 8px;">
    <% flash_type_to_alert_class_mapping = { error: 'alert-danger', notice: 'alert-warning' } %>
    <% flash.each do |key, value| %>
        <% css_class = flash_type_to_alert_class_mapping[key] %>
        <% value = Array(value) %>
        <% value.each do |msg| %>
            <%= content_tag(:div, :class => "flash_#{key} alert #{css_class} alert-dismissable") do -%>
                <%= msg %> <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
            <% end -%>
        <% end %>
    <% end %>
</div>
<script type="text/javascript">
    $("#js-top-notification-bar").slideDown("slow");
</script>