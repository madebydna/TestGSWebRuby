<% average_score %>
<% ratings_count %>

<% if average_score > 0 %>
  <div class="row ptl">
    <div class="col-xs-12 col-sm-6 col-md-4 pbl">
        <%= render 'shared/reviews/star_module', average_score: average_score, ratings_count: ratings_count %>
    </div>
    <div class="col-xs-12 col-sm-6 col-md-4 pbl">
        <%= render 'shared/reviews/bar_graph' %>
    </div>
    <div class="col-xs-12 col-md-4 pbl">
        <%= render 'shared/reviews/link_module', driver: driver %>
    </div>
  </div>
<% else %>
  <%= render "shared/review_no_ratings" %>
<% end %>
