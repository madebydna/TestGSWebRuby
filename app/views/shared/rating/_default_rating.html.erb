<% if page == 'overview' %>
    <div class="tac pal">
        <% if rating.to_s.length < 3 %>
            <div class="default_rating_circle ma">
                <div class="ptm text_000"><%= rating %></div>
            </div>
        <% else %>
            <div class="tac ptm">
                <span class="pam link-darkgray open-sans_b default_rating_rect"><%= rating %></span>
            </div>

        <% end %>
        <% if local_assigns[:supporting_text]%>
          <div class="ptl link-darkgray"><%= supporting_text %></div>
        <% end %>
    </div>
<% elsif rating.to_s.length < 3 %>
    <div class="default_rating_circle tac ma">
        <div class="ptm text_000"><%= rating %></div>
    </div>
<% else %>
    <div class="tal ptm">
        <span class="pam open-sans_b default_rating_rect small"><%= rating %></span>
    </div>
<% end %>
