<% unless defined?(padding) %>
  <% padding = 'pal' %>
<% end %>
<% unless defined?(title) %>
  <% title = '' %>
<% end %>
<div class="tac <%= padding %>>">
    <% rating_type = '' %>
    <% rating_star = rating %>
    <% if rating_star == 0 %>
        <% rating_type = '-outline' %>
        <% rating_star = '1' %>
    <% end %>
    <% if title != '' %>
      <div class="link-darkgray"><%= title %><br /></div>
    <% end %>
    <div style="height: 48px; margin-top: 24px">
            <span class="iconx24-stars_detroit i-24-blue<%= rating_type %>-star i-24-star-<%= rating_star %>"></span>
    </div>

    <%if local_assigns[:supporting_text] %>
      <div class="ptm">
        <span class='link-darkgray'><%= supporting_text %></span>
      </div>
    <% end %>

</div>
