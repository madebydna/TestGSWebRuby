<% if rating.is_a?(Array) && rating.size > 0 %>
  <div class="tac">
    <div class="link-darkgray pbs"><%= supporting_text %></div>
    <% rating.each do |r| %>
      <% rating_value = r["overall_rating"] %>
      <% rating_label = r["label"] %>

      <div class="dib tac mhs small">
        <div class="default_rating_circle ma">
          <div class="ptm text_000"><%= rating_value %></div>
        </div>
        <div class="rs-rating-label"><%= rating_label %></div>
      </div>
    <% end %>
  </div>
<% else %>
      <div class="tac">
        <div class="link-darkgray pbs"><%= supporting_text %></div>
        <% if rating.to_s.length < 3 %>
            <div class="default_rating_circle ma">
                <div class="ptm text_000"><%= rating %></div>
            </div>
        <% else %>
            <div class="tac ptm">
                <span class="pam link-darkgray open-sans_b default_rating_rect"><%= rating %></span>
            </div>

        <% end %>
    </div>
<% end %>
