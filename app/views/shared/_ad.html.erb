<% slot %>
<% width ||= 300 %>
<% height ||= 250 %>
<% size_mapping ||= ''%>

<% unless defined?(show_ad_text) %>
    <% show_ad_text = true %>
<% end %>

<% slot_name = slot.to_s.gs_capitalize_words.gsub(' ', '_').to_sym %>
<% dimensions = [width, height] %>

<% iddef = "#{slot_name}_Ad" %>
<div class="js-<%= iddef %>-wrapper hidden-print">
  <div class="gs_ad_slot ma" id="<%= iddef %>"
       data-ad-size="<%= dimensions %>" style="width: <%= width %>px;"
       data-dfp="<%= slot %>" data-ad-setting="<%= size_mapping %>"></div>
  <% if show_ad_text %>
      <%= render partial: '/shared/advertising_word' %>
  <% end %>
</div>
