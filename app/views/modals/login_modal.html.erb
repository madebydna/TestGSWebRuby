<% heading ||= 'Log in now' %>

<%= render layout: 'modal_layout', locals: {
  heading: heading,
  modal_css_class: "js-login-modal"
} do %>
  <%= form_tag(
    authenticate_user_path,
    method: :post,
    remote: true,
    id: '',
    class: 'join-and-login js-signin-form',
    'data-parsley-namespace' => 'data-parsley-'
  ) do %>
    <input type="hidden" name="language" value=<%= I18n.locale == :en ? 'en' : 'es' %> />
    <%= token_tag form_authenticity_token %>
    <%= render 'forms/login_email_and_password_fieldset' %>
    <%= render 'forms/login_button_fieldset' %>
  <% end %>
<% end %>