<% modal_css_class %>
<% heading %>
<% subheading ||= t('.subheading', default: '') %>

<%= render layout: 'modal_layout', locals: {
  heading: heading,
  subheading: subheading,
  modal_css_class: "join-and-login #{modal_css_class}"
} do %>
  <%= form_tag(
    register_email_path,
    method: :post,
    id: 'signup-school-form',
    'data-parsley-namespace'=>"data-parsley-"
  ) do %>
    <input type="hidden" name="language" value=<%= I18n.locale == :en ? 'en' : 'es' %> />
    <%= token_tag form_authenticity_token %>
    <%= render 'forms/email_fieldset' %>
    <%= render 'forms/grades_fieldset' if I18n.locale == :en %>
    <%#= render 'forms/language_fieldset' %>
    <%= render 'forms/teacher_fieldset' if I18n.locale == :en %>
    <%= render 'forms/sponsors_fieldset' if I18n.locale == :en %>
    <%= render 'forms/join_button_and_tou_fieldset' %>
  <% end %>
<% end %>
