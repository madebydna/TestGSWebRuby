<% if @api_account.errors.any? %>
    <div id="error_explanation">
      <div class="alert alert-danger">
        The form contains <%= pluralize(@api_account.errors.count, "error") %>.
      </div>
      <ul>
        <% @api_account.errors.messages.each do |key, msg| %>
            <li><%= (key.to_s.capitalize + ' ' + msg[0]).humanize if msg[0] %></li>
        <% end %>
      </ul>
    </div>
<% end %>