- content_for :head do
  %title GS Update API Account

%h3 User details
= form_for(@account.user, url: '#') do |f|
  %fieldset{:disabled => "disabled"}
    %div
      = f.label :full_name
      = f.text_field :full_name
    %div
      = f.label :organization
      = f.text_field :organization
    %div
      = f.label :email
      = f.text_field :email
    %div
      = f.label :website
      = f.text_field :website
    %div
      = f.label :phone
      = f.text_field :phone
    %div
      = f.label :city
      = f.text_field :city
    %div
      = f.label :state
      = f.text_field :state
    %div
      = f.label :organization_description
      = f.text_field :organization_description
    %div
      = f.label :role
      = f.text_field :role
    %div
      = f.label :intended_use
      = f.text_field :intended_use
    %div
      = f.label :intended_use_details
      = f.text_area :intended_use_details
    %div
      = link_to 'Stripe user', "https://dashboard.stripe.com/test/customers/#{@account.user.stripe_customer_id}"

    %div
      = f.label :created_at
      = f.text_field :created_at, value: @account.user.created_at.to_date, disabled: true
%br/
%h3 Subscription Details
%br/
%div
  = form_for(@account, url: admin_api_account_path(@account), method: :put) do |f|
    %div
      = f.label :aws_api_key
      = f.text_field :aws_api_key
    %div
      = f.label :status
      = f.text_field :status, disabled: true
    %div
      = f.label :status_message
      = f.text_area :status_message, disabled: true
    %div
      = f.label :created_at
      = f.text_field :created_at, value: @account.created_at.to_date, disabled: true
    %div
      = f.label :start_date
      = f.text_field :start_date, value: @account.start_date.to_date, disabled: true
    %div
      = f.label :notes
      = f.text_area :notes

  = form_for(@account.plan, url: '#') do |f|
    %div
      = f.label "plan name"
      = f.text_field :name, disabled: true

    %div{:style => "text-align: center;margin-top: 40px;"}
    = f.submit "Save", class: "btn btn-primary", style: "width: 150px; margin-right: 15px;"

  %div
    = form_for(@account.plan, url: approve_admin_api_account_path(@account), method: :get) do |f|
      - if @account.pending_approval?
        = f.submit "Approve request", class: "btn btn-danger"
  %div
    = form_for(@account, url: reject_admin_api_account_path(@account), method: :get) do |f|
      - if @account.pending_approval?
        = f.submit "Reject request", class: "btn btn-danger"
  %div
    = form_for(@account, url: deactivate_admin_api_account_path(@account), method: :get) do |f|
      - if @account.active?
        = f.submit "Deactivate user", class: "btn btn-danger"
%div{:style => "text-align: left; margin-bottom: 40px;"}= link_to 'Back to all accounts', admin_api_accounts_path