<% unless content_modules.nil? %>
  <div class='js-content-modules header-bg-color clearfix'>
    <% content_modules.each_with_index do |content_module, i| %>
    <div class="limit-width-1200 phm">
      <div class="col-xs-12 fn">
        <h3 style='margin-bottom: 13px; margin-top: 40px;'><%= content_module[:heading] %></h3>
        <p><%= content_module[:description].html_safe %></p>
        <% unless content_module[:view_more].nil? %>
          <div class='js-module-expand oh'><%= content_module[:view_more].html_safe %></div>
          <span class="view-more">View More Â»</span>
        <% end %>


        <% if i == content_modules.length - 1 %>
        <% else %>
          <hr class='bg-white mtl' style='border: none; height: 1px; width: 100%;'>
        <% end %>
      </div>
    </div>
    <% end %>
  </div>
<% end %>
