<% unless content_modules.nil? %>
  <% content_modules.each_with_index do |content_module, i| %>
  <div class="phm">
    <div class="col-xs-12 fn">
      <h3 class='mtl mbm'><%= db_t(content_module[:heading] )%></h3>
      <p><%= db_t(content_module[:description], default: content_module[:description]).html_safe %></p>
      <% unless content_module[:view_more].nil? %>
        <div class='oh'><%= db_t(content_module[:view_more], default: content_module[:view_more]).html_safe %></div>
        <a href='javascript:void(0)' class="dib mtm js-view-more"><%= t('.view_more_html') %></a>
      <% end %>

      <% unless i == content_modules.length - 1 %>
        <hr class='mvl'>
      <% end %>
    </div>
  </div>
  <% end %>
<% end %>
