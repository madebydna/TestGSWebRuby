<% unless content_modules.nil? %>
  <div class='js-content-modules'>
    <% content_modules.each do |content_module| %>
    <div class="limit_width_1200">
      <div class="col-xs-12 fn">
        <h3 style='margin-bottom: 13px; margin-top: 40px;'><%= content_module[:heading] %></h3>
        <p><%= content_module[:description].html_safe %></p>
        <% unless content_module[:view_more].nil? %>
          <div class='js-module-expand'><%= content_module[:view_more].html_safe %></div>
          <span class="view-more">View More Â»</span>
        <% end %>
        <hr style='background: #fff; border: none; height: 1px; width: 100%; margin-top: 20px'>
      </div>
    </div>
    <% end %>
  </div>
<% end %>
