<div class="limit-width-1200  collapse js-email-settings phm" xmlns="http://www.w3.org/1999/html">
  <% if @current_user.subscriptions.present? %>
      <div class="limit-width-1200 mtl">
        <% @current_user.subscriptions.group_by(&:list).each do |list, subscriptions| %>
            <div class="pbl">
              <% if Subscription.is_grouped?(list) %>

                  <% first_decorated_subscription = NewsletterDecorator.decorate(subscriptions.first) %>
                  <h3><%= first_decorated_subscription.name %></h3>
                  <%= first_decorated_subscription.description %>
                  <% subscriptions.each do |subscription| %>
                      <% decorated_subscription = NewsletterDecorator.decorate(subscription) %>

                      <div class="js-subscription-<%= subscription.id %>">
                        <% if decorated_subscription.school && decorated_subscription.school.city && decorated_subscription.school.state %>
                            <div class="open-sans_sb mtm">
                              <label class="pointer notranslate">
                                <div class="fl mtn prm">
                                  <%= check_box_tag 'mystat', "/gsr/user/subscriptions/#{subscription.id}/", is_checked = true, class: "js-delete-subscription-#{subscription.id}", :data => {:params_local => {"id" => subscription.id, "name" => subscription.list}} %>

                                </div>
                                <%= decorated_subscription.school.name %>, <%= decorated_subscription.school.city %>
                                , <%= decorated_subscription.school.state %>
                              </label>
                            </div>

                        <% end %>
                      </div>

                  <% end %>
              <% else %>
                  <% decorated_subscription = NewsletterDecorator.decorate(subscriptions.first) %>
                  <div class="js-subscription-<%= subscriptions.first.id %>">
                    <label class="db pointer">
                      <div class="fl mtn prm">
                        <%= check_box_tag "#{subscriptions.first.list}", "/gsr/user/subscriptions/#{subscriptions.first.id}/", is_checked = true, class: "js-delete-subscription-#{subscriptions.first.id}",
                                          :data => {:params_local => {"id" => subscriptions.first.id,
                                                                      "name" => subscriptions.first.list}} %>

                      </div>
                      <h3><%= decorated_subscription.name %></h3>
                    </label>

                    <div>
                      <%= decorated_subscription.description %>
                    </div>
                  </div>
              <% end %>
            </div>

        <% end %>
        <% if !current_user.has_signedup?('greatnews') %>

            <div class="js-subscription">
              <label class="db pointer">
                <div class="fl mtn prm">
                  <%= check_box_tag "greatnews", "/gsr/user/subscriptions/greatnews", is_checked = false, class: "js-add-subscription-greatnews",
                                    :data => {:params_local => {"name" => "greatnews"}} %>


                </div>
                <h3><%= Subscription.subscription_product("greatnews").long_name %></h3>
              </label>

              <div>
                <%= Subscription.subscription_product("greatnews").description %>

              </div>
            </div>

        <% end %>



        <% if !current_user.has_signedup?('sponsor') %>

            <div class="js-subscription">
              <label class="db pointer">
                <div class="fl mtn prm">
                  <%= check_box_tag "sponsor", "/gsr/user/subscriptions/sponsor", is_checked = false, class: "js-add-subscription-sponsor",
                                    :data => {:params_local => {"name" => "sponsor"}} %>


                </div>
                <h3><%= Subscription.subscription_product("sponsor").long_name %></h3>
              </label>

              <div>
                <%= Subscription.subscription_product("sponsor").description %>

              </div>
            </div>

        <% end %>


        <% if !current_user.has_signedup?('mystat') && !current_user.has_signedup?('mystat_private') && !current_user.has_signedup?('mystat_unverified') %>

            <div class="js-subscription">

              <h3> My School Stats</h3>


              <div>
                Follow schools to save them here and we'll update you when there are new reviews, test scores, or
                GreatSchools ratings.

              </div>
            </div>

        <% end %>



        </div>

      </div>
  <% else %>
      <div class="js-subscription">
        <label class="db pointer">
          <div class="fl mtn prm">
            <%= check_box_tag "greatnews", "/gsr/user/subscriptions/greatnews", is_checked = false, class: "js-add-subscription-greatnews",
                              :data => {:params_local => {"name" => "greatnews"}} %>


          </div>
          <h3><%= Subscription.subscription_product("greatnews").long_name %></h3>
        </label>

        <div>
          <%= Subscription.subscription_product("greatnews").description %>

        </div>
      </div>


      <div class="js-subscription">
        <label class="db pointer">
          <div class="fl mtn prm">
            <%= check_box_tag "sponsor", "/gsr/user/subscriptions/sponsor", is_checked = false, class: "js-add-subscription-sponsor",
                              :data => {:params_local => {"name" => "sponsor"}} %>


          </div>
          <h3><%= Subscription.subscription_product("sponsor").long_name %></h3>
        </label>

        <div>
          <%= Subscription.subscription_product("sponsor").description %>

        </div>
      </div>


      <div class="js-subscription">

        <h3> My School Stats</h3>


        <div>
          Follow schools to save them here and we'll update you when there are new reviews, test scores, or GreatSchools
          ratings.

        </div>
      </div>


  <% end %>
</div>


