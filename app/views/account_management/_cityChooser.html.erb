<form accept-charset="UTF-8" action="/gsr/user/save_city_state" method="get">
  <div style="display:none"><input name="utf8" type="hidden" value="âœ“"></div>


  <div class="container">
    <div class="col-xs-4 col-sm-2 col-md-2 col-lg-2">
      <div class="mbs open-sans_sb">State</div>
      <%= render 'change_location', choose_state: @state_locale.present? ? @state_locale[:long].titleize : nil %>
    </div>
    <input name="userState" type="hidden" value="">

    <div class="col-xs-8 col-sm-8 col-md-8 col-lg-8 prm mbm prn-mobile">
      <div class="mbs open-sans_sb">City</div>
      <% if @city_locale.present? %>
          <input type="text"
                 name="userCity"
                 id="js-userCity"
                 class='typeahead-city search-text full-width pam'
                 placeholder="Enter your city"
                 required="required"
                 value="<%= @city_locale %>">
      <% else %>
          <input
          type="text"
          name="userCity"
          id="js-userCity"
          class='typeahead-city search-text full-width pam'
          required="required"
          placeholder="Enter your city">
      <% end %>
    </div>
    <div class="col-xs-12 col-sm-2 col-md-2 col-lg-2 ptl mts">
      <input class="btn btn-lg btn-primary pam full-width mbl" name="commit" type="submit" value="Submit">

    </div>
  </div>
</form>
