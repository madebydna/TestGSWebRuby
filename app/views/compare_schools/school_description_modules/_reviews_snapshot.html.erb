<% school_reviews_page_path = school_path(@school) + 'reviews/' %>
<% star_rating = @school.star_rating %>

<div class="ptm tac js-reviewSnapshot">
  <% if @school.num_reviews > 0 %>
      <div class="js-reviewStars">
        <% if @school.num_ratings > 0 %>
            <div class="pts"><%= draw_stars_24 star_rating%></div>
            <div class="font-size-large"><%= pluralize(star_rating, 'star', 'stars') %></div>
        <% end %>
      </div>
      <% if @school.num_ratings > 0 %>
          <div>Based on <%= pluralize(@school.num_ratings, 'rating', 'ratings') %></div>
      <% else %>
          <div>No community ratings</div>
      <% end %>
      <div class="ptm pbl"><%= link_to pluralize(@school.num_reviews, 'review', 'reviews'), school_reviews_page_path %></div>
  <% else %>
      <div class="js-reviewStars"></div>
      <div class="">No community reviews</div>
  <% end %>
</div>
