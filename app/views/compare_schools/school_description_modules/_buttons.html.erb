<div class="ptl tac">
  <% config.opt[:datapoints].each do |datapoints| %>
    <div class="pbm phl">
      <button class="<%= datapoints[:class]%>" 
        data-link-value="<%= @school.send(datapoints[:method]) %>"
        style='width:80%' rel="<%= datapoints[:rel]%>" 
        data-link-use-new-window="<%= datapoints[:target].present? ? true : '' %>">
        <span class="vat <%= datapoints[:icon] %> mrs"></span>
        <%= datapoints[:label] %>
      </button>
    </div>
  <% end %>
</div>
