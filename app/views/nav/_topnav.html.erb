<nav class="navbar navbar-default navbar-fixed-top <%= @gs_bootstrap %>" role="navigation">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="limit-width-1200">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <div class="fl gs-logo"><%= link_to(home_url) { image_tag 'nav/GS_logo_2x-new.png', size:'150x35', alt:'GreatSchools.org' } %></div>
        </div>
        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse navbar-ex1-collapse topnav-float">
            <% nav = topnav(@school, @hub) %>
            <ul class="nav navbar-nav">
                <li>
                    <%- if nav.has_topnav? %>
                        <a class="dropdown-toggle js-gaLoad js-gaClick" data-toggle="dropdown"
                           data-ga-load-label="topNav localStateCity dropdown" data-ga-click-label="topNav localStateCity dropdown"
                           href="#home">
                            <%= nav.topnav_title %>  <span class="caret"></span>
                        </a>
                    <% end %>
                    <ul class="dropdown-menu">
                        <%- if nav.has_topnav? %>
                            <% if nav.city %>
                                <%= render 'nav/dropdown_link', text: "#{nav.city.gs_capitalize_words} Home", url: city_url(nav.url_params) %>
                                <%= render 'nav/dropdown_link', flag: cookies[:choosePage], text: 'Choosing a School', url: city_choosing_schools_url(nav.url_params) %>
                                <%= render 'nav/dropdown_link', flag: cookies[:eduPage], text: 'Education Community', url: city_education_community_url(nav.url_params) %>
                                <%= render 'nav/dropdown_link', flag: cookies[:enrollPage], text: 'Enrollment Information', url: city_enrollment_url(nav.url_params) %>
                                <%= render 'nav/dropdown_link', flag: cookies[:eventsPage], text: 'Events', url: city_events_url(nav.url_params) %>

                                <li>
                                    <%= link_to home_url, class: 'js-clear-local-cookies-link' do %>Not in
                                        <span><%= nav.city.gs_capitalize_words %></span>?
                                    <% end %>
                                </li>
                            <% else %>
                                <%= render 'nav/dropdown_link', text: "#{States.state_name(nav.state).gs_capitalize_words} Home", url: state_url(nav.url_params) %>
                                <%= render 'nav/dropdown_link', flag: cookies[:choosePage], text: "Choosing a School", url: state_choosing_schools_url(nav.url_params) %>
                                <%= render 'nav/dropdown_link', flag: cookies[:eduPage], text: "Education Community", url: state_education_community_url(nav.url_params) %>
                                <%= render 'nav/dropdown_link', flag: cookies[:enrollPage], text: "Enrollment Information", url: state_enrollment_url(nav.url_params) %>
                                <%= render 'nav/dropdown_link', flag: cookies[:eventsPage], text: "Events", url: state_events_url(nav.url_params) %>

                                <li>
                                    <%= link_to home_url, class: 'js-clear-local-cookies-link' do %>Not in
                                        <span><%= States.state_name(nav.state).gs_capitalize_words %></span>?
                                    <% end %>
                                </li>
                            <% end %>
                        <% end %>
                    </ul>
                </li>
                <li><%= link_to 'Find a School', home_url, class: "js-gaLoad js-gaClick",
                                    data:{'ga-click-label'=>'topNav findASchool link',
                                          'ga-load-label'=>'topNav findASchool link' } %>
                </li>
                <li>
                    <%= link_to 'Review Your School',
                        ((defined?(@school) && @school.present?) ? school_reviews_path(@school, anchor: 'topic1') : the_scoop_path),
                        :onclick=>"GS.omniture.track_reviews('GlobalNav');", :class=>'js-no_ad' %>
                </li>
                <li><a class="dropdown-toggle js-gaLoad js-gaClick"
                       data-toggle="dropdown"
                       data-ga-load-label="topNav Discover dropdown" data-ga-click-label="topNav Discover dropdown"
                       href="#greatkids">GreatKids! <span class="caret"></span>
                    </a>
                    <ul class="dropdown-menu">
                      <li class=" ">
                        <%= link_to 'Welcome to GreatKids!'.html_safe, greatkids_home_url,
                                    class: "js-gaLoad js-gaClick",
                                    data:{'ga-click-label'=>'topNav gkHome link',
                                          'ga-load-label'=>'topNav gkHome link' } %>
                      </li>
                      <li class=" ">
                        <%= link_to 'Worksheets &amp; Activities'.html_safe, worksheets_and_activities_url,
                                    class: "js-gaLoad js-gaClick",
                                    data:{'ga-click-label'=>'topNav worksheetsAndActivities link',
                                          'ga-load-label'=>'topNav worksheetsAndActivities link' } %>
                      </li>
                      <li>
                        <%= link_to 'Emotional Smarts', emotional_smarts_url,
                                    class: "js-gaLoad js-gaClick",
                                    data:{'ga-click-label'=>'topNav emotionalSmarts link',
                                          'ga-load-label'=>'topNav emotionalSmarts link' } %>
                      </li>
                      <li>
                        <%= link_to 'Moving With Kids'.html_safe, moving_url,
                                    class: "js-gaLoad js-gaClick",
                                    data:{'ga-click-label'=>'topNav movingWithKids link',
                                          'ga-load-label'=>'topNav movingWithKids link' } %>
                      </li>
                      <li class=" ">
                        <%= link_to 'Early Learning'.html_safe, early_learning_url,
                                    class: "js-gaLoad js-gaClick",
                                    data:{'ga-click-label'=>'topNav earlyLearning link',
                                          'ga-load-label'=>'topNav earlyLearning link' } %>
                      </li>
                      <li>
                        <%= link_to 'Learning Disabilities', learning_disabilities_url,
                                    class: "js-gaLoad js-gaClick",
                                    data:{'ga-click-label'=>'topNav learningDisabilities link',
                                          'ga-load-label'=>'topNav learningDisabilities link' } %>
                      </li>
                      <li class=" ">
                        <%= link_to 'Summer Learning'.html_safe, summer_learning_url,
                                    class: "js-gaLoad js-gaClick",
                                    data:{'ga-click-label'=>'topNav summerLearning link',
                                          'ga-load-label'=>'topNav summerLearning link' } %>
                      </li>
                    </ul>
                </li>

                <li>
                    <% if logged_in? %>
                        <a class="dropdown-toggle"
                           data-toggle="dropdown"
                           href="#back-to-school">My Account <span class="caret"></span>
                        </a>

                        <ul class="dropdown-menu dropdown-menu_top_nav">
                            <% if current_user.provisional_or_approved_osp_user? %>
                                <li>
                                    <%= link_to 'Edit school profile', osp_dashboard_url %>
                                </li>
                            <% end %>
                            <li>
                                <%= link_to 'My School List', my_school_list_url, rel:'nofollow' %>
                            </li>
                            <li>
                                <%= link_to 'Account Settings', my_account_url %>
                            </li>
                            <li>
                                <%= link_to('Sign Out', logout_url, :method => :delete) %>
                            </li>
                        </ul>
                    <% else %>
                        <%= link_to('Sign In', signin_url,
                                    class: 'brand-secondary js-no_ad js-gaLoad js-gaClick',
                                    data:{'ga-click-label'=>'topNav signIn link',
                                          'ga-load-label'=>'topNav signIn link' }) %>
                    <% end %>
                </li>
            </ul>
        </div><!-- /.navbar-collapse -->
    </div>
</nav>
