<div class="pvm header-bg-color">
  <div class="row ma limit-width-1200">
    <div class="row pbm ptm">
      <form name="prototypeSearchForm" class="js-prototypeSearchForm mbl" action="/search/search.page" method="get">
        <div class="col-xs-12 col-sm-8 pam prl">
            <input  type="text"
                    name="locationSearchString"
                    value="Search schools"
                    id="js-prototypeSearch"
                    class='typeahead search-text full-width pam'
                    onfocus="GS.textSwitch(this, '', 'Search schools');"
                    onblur="GS.textSwitch(this, 'Search schools', '');"
                    placeholder="ex. 19703 or Dover High School">
        </div>

        <div class='col-xs-12 col-sm-2 col-md-2 col-lg-2 pam prl'>
          <select class="form-control input-lg font-size-small" id="js-prototypeSearchGradeLevelFilter" name="grades">
            <option value="">--Grade Level--</option>
            <% @search_bar_display_map[:grades].each do |grades, display_name| %>
                <option value=<%=grades.to_s%><%if @params_hash.include?('grades') && @params_hash['grades'] == grades.to_s%> selected<%end%>><%=display_name%></option>
            <% end %>
          </select>
        </div>

        <div class="col-xs-12 col-sm-2 col-md-2 col-lg-2 pam">
          <button type='submit' class="btn btn-lg btn-primary">Search</button>
        </div>   
      </form>
    </div>

    <% if @nearby_cities && @nearby_cities.size > 0 %>
        <div class="row pbm plm prm hidden-xs">
          <div class="fl mrl">Nearby Cities:</div>
            <% @nearby_cities.each_index do |x|
                city = @nearby_cities[x] %>
                <div class="<%= x > 3 ? 'hidden-sm' : ''%> <%= x > 5 ? 'hidden-md' : ''%> fl mrl"><%= link_to city.name, search_city_browse_path(city.state_name_url, city.name_url.downcase) %></div>
            <% end %>
        </div>
    <% end %>
