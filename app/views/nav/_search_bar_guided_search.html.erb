<div class="pvm bg-dark-blue" style="background-color: dodgerblue">
  <div class="row ma limit-width-1200">
    <div class="row pbl ptl">
      <form name="prototypeSearchForm" class="js-prototypeSearchForm mbl" action="/search/search.page" method="get">
        <!-- Todo: make a class -->
        <div class="col-xs-12 col-sm-8 pam">
        <input  type="text"
                name="locationSearchString"
                value="Enter 5-digits for byLocation Search, Else byName Search"
                id="js-prototypeSearch"
                class='typeahead search-text full-width pam'
                onfocus="GS.textSwitch(this, '', 'Enter 5-digits for byLocation Search, Else byName Search');"
                onblur="GS.textSwitch(this, 'Enter 5-digits for byLocation Search, Else byName Search', '');"
                placeholder="ex. 19703 or Dover High School">
        </div>

        <div class='col-xs-12 col-sm-2 col-md-2 col-lg-2 pam'>
          <select class="form-control input-lg" id="js-prototypeSearchGradeLevelFilter" name="grades">
            <option value=""selected>--Grade Level--</option>
            <% @search_bar_display_map[:grades].each do |grades, display_name| %>
                <option value=<%=grades.to_s%><%if @params_hash.include?('grades') && @params_hash['grades'] == grades.to_s%> selected<%end%>><%=display_name%></option>
            <% end %>
          </select>
        </div>

        <div class="col-xs-12 col-sm-2 pam">
          <button type='submit' class="btn btn-lg btn-primary pull-right">Search</button>
        </div>   
      </form>
    </div>

    <% if @nearby_cities && @nearby_cities.size > 0 %>
        <div class="row pbl plm prm" style="color:#f5f5f5;">
          <div class="col-sm-3 col-md-2 col-lg-2 hidden-xs" style="font-weight:bold;">Nearby Cities:</div>
            <% @nearby_cities.each_index do |x|
                city = @nearby_cities[x] %>
                <div class="hidden-xs <%= x < 3 ? 'col-sm-3' : 'hidden-sm'%> col-md-2 col-lg-2"><%= link_to city.name, search_city_browse_path(city.state_name_url, city.name_url.downcase) %></div>
            <% end %>
        </div>
    <% end %>
    <div class="row pbl plm prm" style="color:#f5f5f5;">
      <div class="col-sm-12 col-md-6 hidden-xs"><span style="font-weight:bold;">Additional Information:</span> How enrollment works in Delaware</div>
      <div class="col-sm-12 col-md-6 hidden-xs">Apply now</div>
    </div>

  </div>
</div>
