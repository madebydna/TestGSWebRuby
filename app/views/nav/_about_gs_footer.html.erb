<% cache(["nav/about_gs_footer", locale: I18n.locale]) do %>
<div class="row tal invert-colors mtl" style='background-color: transparent;'>
  <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 pvl hidden-print">
    <%= render 'nav/google_translate_selector' %>
  </div>
  <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
    <h4><%= t('.title') %></h4>

    <p class="prl">
      <%= t('.our_mission') %>
    </p>

    <div class="donate hidden-xs">
      <%= t('.support_greatschools') %> <%= link_to(t('.donate_now'), 'https://greatschools.networkforgood.com/', target: "_blank") %>
    </div>
    <div class="donate visible-xs col-xs-12">
      <%= t('.support_greatschools') %>
      <div class = "col-xs-12">
      <%= link_to(t('.donate_now'), 'https://greatschools.networkforgood.com/', target: "_blank") %>
      </div>
      </div>
  </div>

  <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
    <div class="row">
        <div class="col-xs-6 col-sm-4 col-md-4 col-lg-4">
          <h4><%= t('.company') %></h4>
          <ul>
            <li><%= link_to t('.our_mission_link'), our_mission_url %></li>
            <li><%= link_to t('.our_people_link'), our_people_url %></li>
            <li><%= link_to t('.jobs_link'), jobs_url %></li>
            <li><%= link_to t('.contact_us_link'), contact_us_url, :class=>'js-no_ad_link' %></li>
          </ul>
        </div>

        <div class="col-xs-6 col-sm-4 col-md-4 col-lg-4">
          <h4><%= t('.media') %></h4>
          <ul>
            <li><%= link_to t('.advertise_with_us_link'), advertise_url %></li>
            <li><%= link_to t('.partners_link'), partners_url %></li>
            <li><%= link_to t('.media_room_link'), media_room_url, rel: 'nofollow_link' %></li>
            <li><%= link_to t('.licensing_link'), licensing_url%></li>
          </ul>
        </div>

        <div class="col-xs-12 col-sm-4 col-md-4 col-lg-4">
          <h4><%= t('.policies') %></h4>
          <ul>
            <li><%= link_to t('.how_we_rate_schools_link'), how_we_rate_schools_url %></li>
            <li><%= link_to t('.school_review_guidelines_link'), school_review_guidelines_url %></li>
            <li><%= link_to t('.terms_of_use_link'), terms_of_use_url, rel: 'nofollow_link' %></li>
            <li><%= link_to t('.privacy_policy_link'), privacy_url %></li>
          </ul>
        </div>
      </div>
  </div>
</div>
<% end %>
