<% unless defined?(mobile) %>
    <% mobile = false %>
<% end %>
<% if mobile %>
    <% browse_list_classes = "school-breakdown zir-1 pln visible-sm visible-xs col-12-sm" %>
<% else %>
    <% browse_list_classes= "school-breakdown pln col-md-4 hidden-sm hidden-xs" %>
<% end %>
<div class="<%= browse_list_classes %>">
  <h4 class='pbs mvn brand-secondary'><%= t('.heading') %></h4>
  <ul class='pln pb35'>
    <% browse_links.each do |link| %>
      <% link_url = link[:link]  %>
      <% if I18n.locale != I18n.default_locale  %>
        <% link_url = add_query_params_to_url(link_url, false, {lang: I18n.locale.to_s})  %>
      <% end  %>
      <li class='mvm'>
      <%= link_to link[:label], link_url, class: 'sm-black-lg-white-text pvm js-browseSchools' %>
      </li>
  <% end %>
  </ul>
</div>
