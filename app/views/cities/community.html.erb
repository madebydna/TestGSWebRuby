<%= render 'nav/topnav' %>
<%= render 'nav/search_bar', state: @state, city: @city, collection_id: @collection_id %>

<div class="fixed-top pvm" style='background-color: #f5f5f5'>
  <div class="limit_width_1200">
    <%= render 'upcoming_events', important_events: @events, community_page: true %>
  </div>
</div>

<div class="limit_width_1200" style='margin-bottom: 40px;'>
  <div class="row">
    <%= render 'shared/breadcrumbs', breadcrumbs: @breadcrumbs %>
  </div>

  <div class="row">
    <div class="col-xs-10 col-sm-10 col-md-6 col-lg-7 col-lg-offset-3 col-md-offset-2 col-sm-offset-1">
      <h1 class='mha'><%= @city.capitalize %> Education Community</h1>
    </div>
    <div class="col-xs-10 col-sm-10 col-md-7 col-lg-8 col-lg-offset-2 col-md-offset-1 col-sm-offset-1">
      <p><%= @sub_heading %></p>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-10 col-sm-10 col-md-7 col-lg-6 col-lg-offset-3 col-md-offset-2 col-sm-offset-1 mtl">
      <ul class='education-community-tabs'>
        <base href="<%= city_education_community_path(@state[:long], @city) %>">
        <li class="<%= 'active' if @tab == 'Community' %>"><a href="">Community</a></li>
        <li class="<%= 'active' if @tab == 'Education' %>"><a href="education">Education</a></li>
        <li class="<%= 'active' if @tab == 'Funders' %>"><a href="funders">Funders</a></li>
      </ul>
    </div>
  </div>

  <% @partners[@tab].each do |partner| %>
    <div class="row">
      <div class="community-partner-row">
        <hr>
        <%= image_tag(partner[:logo], alt: 'Partner logo') %>
        <div>
          <h2 class='mtn'><%= partner[:heading] %></h2>
          <p><%= partner[:description] %></p>
          <% partner[:links].each do |link| %>
            <% if link[:newwindow] == 'true' %>
              <%= link_to(link[:heading], link[:url], class: 'small', target: 'blank') %>
            <% else %>
              <%= link_to(link[:heading], link[:url], class: 'small') %>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>

<%= render 'footer' %>
