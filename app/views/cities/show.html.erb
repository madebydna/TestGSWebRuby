<% content_for :javascript_includes do %>
  <%= javascript_include_tag "cycle/jquery.cycle2.js" %>
  <%= javascript_include_tag "cycle/jquery.cycle2.carousel.js" %>
  <%= javascript_include_tag "cycle/carousel_init.js" %>
  <script>
    $(document).ready(function() {
      GS.track.setOmnitureData();
      GS.util.setupImages({ selector: '.js-choose-a-school-img', desktopImage: '<%= image_path('hubs/choose_a_school.png')%>',loadMobile: false});

    });
  </script>
<% end %>

<%= render 'nav/topnav', hub_params: @hub_params %>
<%= render 'shared/no_school_alert' %>

<%= render 'shared/search_hero', collection_nickname: @collection_nickname,
                            collection_id: @collection_id,
                            state: @state,
                            browse_links: @browse_links,
                            sponsor: @sponsor,
                            hero_image: @hero_image,
                            hero_image_mobile: @hero_image_mobile %>

<div class="limit-width-1200">

  <%= render 'shared/choose_a_school', choose_school: @choose_school %>
  <%= render 'upcoming_events', important_events: @important_events, announcement: @announcement %>
  <% if @show_ads %>
     <% ad_hash_review_module={page:'City_Home'.to_sym,slot:'Content_Top'.to_sym}%>
  <%end%>
  <%= render 'shared/review_global', ad_data:ad_hash_review_module %>
  <%= render 'featured_articles', articles: @articles %>
  <%= render 'shared/home/email_signup'%>
  <%= render 'partner_carousel', partner_carousel: @partner_carousel %>



   <% if @show_ads %>
     <div class="mvl">
        <%= render 'layouts/ad_layer', page: ('City_Home').to_sym, slot: :Footer, view: :desktop  %>
        <%= render 'layouts/ad_layer', page: ('City_Home').to_sym, slot: :Footer, view: :mobile  %>
     </div>

   <% end %>

</div>

<%= render 'shared/state_footer', state: @state, cities: @cities %>
