<% if reviews and !reviews.empty? %>
  <div class="row mtxl">
    <div class="clearfix phm">
      <h2 class='pull-left mtn prl'>Recent Reviews</h2>
      <button class='btn btn-primary lg-fr js-button-link' data-link-value="/school/parentReview.page">Review Your School</button>
    </div>
    <% reviews.each_with_index do |review, i| %>
      <div class='col-xs-12 col-sm-12 col-md-6 col-lg-6 pam mbl recent-review'>
        <div class="well">
          <div class='mbm'>
            <%= render 'shared/stars', locals: { rating: review.quality } %>
            <span class="small mlm vat" style='color: #999;'>Posted <%= time_ago_in_words(review.posted) %></span>
          </div>
          <p class="bottom"><%= abbreviate_at_whitespace(review.comments, 140) %></p>
        </div>
        <div class="bottom medium-bold mtl"><%= review.school.name %></div>
        <% unless review.school.gs_rating.nil? %>
          <p class="bottom">GreatSchools rating: <%= review.school.gs_rating %></p>
        <% else %>
          <p class="bottom">GreatSchools rating: <span class="ratingx24 ratingx24-nr"></span></p>
        <% end %>
        <%= link_to "Read all #{review.count} reviews", school_reviews_url(review.school), class: 'small' %>
      </div>
    <% end %>
  </div>
<% end %>
