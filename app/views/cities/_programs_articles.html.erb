<div class="row mvl phm">
  <h2 class='mtn'><%= articles[:heading] %></h2>
  <h6 class='mvl'><%= articles[:subheading] %></h6>

  <% if defined?(articles) && !articles.try(:[], :articles).nil? %>
    <div class="col-xs-12 mtl">
      <% articles[:articles].each do |article| %>
          <%= image_tag(article[:imagePath], alt: "#{@city}", class: 'col-md-2 prl pbl') %>

          <div class="col-md-10">
            <h4 class='mtn'><%= article[:heading] %></h4>

            <p class="pull-left"><%= article[:content] %></p>

            <% if article[:newWindow] %>
              <%= link_to article[:heading], article[:path], class: 'pull-left mbl cb', target: '_blank' %>
            <% else %>
              <%= link_to article[:heading], article[:path], class: 'pull-left mbl cb' %>
            <% end %>
          </div>

          <hr class="clearfix full-width">
      <% end %>
    </div>
  <% end %>
</div>

