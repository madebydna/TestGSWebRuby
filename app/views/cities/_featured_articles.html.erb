<div class="row mvl">
  <% unless articles.nil? %>
    <div class="col-xs-12 col-md-7 mtl mbl pam">
      <h2 class="mtn mbl"><%= t('.featured_articles') %></h2>
      <% articles.each do |article| %>
        <div class='row'>
          <div class="col-md-2 prl pbm">
            <%= image_tag(article[:articleImagePath], alt: "City of #{@city}", class: '') %>
          </div>
          <div class="col-md-10 mbl">
            <h4 class="mvn pvn"><%= article[:heading] %></h4>
            <p class='mobile-clearfix'><%= article[:content] %></p>
               <% if article[:newwindow] %>
              <%= link_to t('.learn_more_html'), article[:articlepath], target: '_blank' %>
            <% else %>
                <%= link_to t('.learn_more_html'), article[:articlepath] %>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <h3 class="mbm mtm"><%= t('.no_data_found') %></h3>
  <% end %>

  <div  id="js-zillow" class="col-xs-12 col-md-5 mtl pam">
    <h2 class="mtn tac mbl"><%= t('.nearby_homes_for_sale') %></h2>
    <%= render 'data_layouts/zillow_content', data: @zillow_data %>
  </div>
</div>
