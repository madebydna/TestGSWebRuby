<% content_for :javascript_includes do %>
    <script>
        $(function() {
            GS.util.setupImages({ selector: '.is-scaled', desktopImage: '<%= image_path('review_school_chooser/reviews_hero_hand.jpg')%>', mobileImage: '<%= image_path('review_school_chooser/reviews_hero_hand_mobile.jpg')%>', classes:'scaling' });
            GS.track.setOmnitureData();

        })
    </script>
<% end %>

<%= render 'shared/review_school_chooser/hero_image_select' %>

<% if @reviews.present? %>
  <div class="row limit-width-1200 pbl">
    <div class="col-xs-12">
      <div id="js_reviewsListHeader" class="link-down-compensate rs-review-list-header">
        <hr/>
        <div class="plm mbl tac">
          <h2><%= t('.header') %></h2>
        </div>
      </div>
      <div class="js_reviewsList">
        <%= render partial: 'review_module', collection: @reviews, as: :review %>
      </div>
    </div>
  </div>
<% end %>

<%= render partial: 'shared/home_footer' %>