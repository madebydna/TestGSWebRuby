<div class="tab-pane" id="<%= @guided_search_tab[2]%>">
  <h3 class="tac mbl prm">Let's talk style. Do you have a preference about school dress code?</h3>
  <div class="row mtl mbxl">
    <div class="tac col-lg-12 col-md-12 col-sm-12 col-xs-12 hidden-xs">
      <div class="btn-group guided_search">
        <button type="button"
                class="btn btn-toggle js-gs-radio font-size-medium"

                data-gs-radio="no_dress_code">
          No dress code
        </button>

        <button type="button"
                class="btn btn-toggle js-gs-radio font-size-medium"
                data-gs-radio="uniform&&dress_code">
          Dress code/uniform
        </button>
        <button type="button"
                class="btn btn-toggle js-gs-radio active font-size-medium">
          No preference</button>
      </div>
      <input type="hidden" name="dress_code[]" value="" class="js-gs-radio-value">

    </div>
    <div class="tac col-lg-12 col-md-12 col-sm-12 col-xs-12 visible-xs">

      <div class="btn-group-vertical">
        <button type="button"
                class="btn btn-toggle js-gs-radio font-size-medium"

                data-gs-radio="no_dress_code">
          No dress code
        </button>

        <button type="button"
                class="btn btn-toggle js-gs-radio font-size-medium"
                data-gs-radio="uniform&&dress_code">
          Dress Code/Uniform
        </button>
        <button type="button"
                class="btn btn-toggle js-gs-radio active font-size-medium">
          No preference</button>
      </div>

      <input type="hidden" name="dress_code[]" value="" class="js-gs-radio-value">

    </div>


  </div>
  <%=render 'button_navigation', next_tab_name: @guided_search_tab[3], previous_tab_name: @guided_search_tab[1]%>

</div>
