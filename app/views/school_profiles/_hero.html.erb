<% hero %>

<div id="hero">
  <div class="container">
    <div>
      <h1 class="school-name"><%= hero.school_name %></h1>
    </div>

    <div class="row school-info p-t-1">
      <% if hero.has_school_address? %>
        <div class="col-xs">
          <%= render 'icon_and_content', icon: :location, content: hero.school_address %>
        </div>
      <% end %>
      <% if hero.has_district? %>
        <div class="col-xs">
          <%= hero.district_name %>
        </div>
      <% end %>
      <% if hero.has_school_phone? %>
        <div class="col-xs">
          <%= render 'icon_and_content', icon: :phone, content: hero.school_phone %>
        </div>
      <% end %>
      <% if hero.has_school_home_page_url? %>
        <div class="col-xs">
          <%= render 'icon_and_content', icon: :link, content: hero.school_home_page_link %>
        </div>
      <% end %>
      <div class="col-xs">
        More Contact
      </div>
    </div>

    <div class="row school-info p-t-2 p-b-1">
      <div class="col-xs">
        <div class="row">
          <div class="col-xs">
            <div class="rs-gs-rating gs-rating rating_<%= hero.gs_rating %>"><%= hero.gs_rating %></div>
          </div>
          <div class="col-xs p-l-0">
            GreatSchools</br>Rating
          </div>
        </div>
      </div>
      <div class="col-xs">
        <div class="label">Reviews</div>
        <div>
          <%= hero.number_of_active_reviews %>
          <span class="rs-five-star-rating"> <%= hero.five_star_rating %></span>stars
        </div>
      </div>
      <div class="col-xs hidden-sm-down">
        <div class="label"><%= hero.grade_range_label %></div>
        <div><%= hero.grade_range %></div>
      </div>
      <div class="col-xs hidden-sm-down">
        <div class="label">Students</div>
        <div><%= hero.students_enrolled %></div>
      </div>
      <div class="col-xs hidden-sm-down">
        <div class="label">Type</div>
        <div><%= hero.school_type %></div>
      </div>
    </div>

  </div>
</div>
