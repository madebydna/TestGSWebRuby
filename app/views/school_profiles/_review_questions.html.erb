<% questions = review_questions.questions %>
<% school_id = review_questions.school_id %>
<% state = review_questions.state %>

<a name="Reviews"></a>

<div class="rating-container">
  <div class="row">
    <div class="col-xs-12 col-lg-3">
      <div class="rating-container__title">
        <%= t('school_profiles.Review this school') %>
      </div>
    </div>
    <div class="col-xs-12 col-lg-9">
      <div class="review-form-container">
        <%= react_component('ReviewForm', state: state, schoolId: school_id, questions: questions) %>
      </div>
    </div>
  </div>
</div>
