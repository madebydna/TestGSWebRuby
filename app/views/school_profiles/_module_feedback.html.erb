<% content %>
<% qualaroo_yes_url = content + '&a=0' %>
<% qualaroo_no_url = content + '&a=1' %>
<% yml_key ||= 'was_this_useful' %>

<div class="module_feedback">
  <%= t('lib.test_scores.' + yml_key) %>
  <span>
    <%=
      link_to(I18n.db_t('Yes'), qualaroo_yes_url, class: 'anchor-button', target: '_blank')
      %><%# adding any whitespace here affects layout %><%=
      link_to(I18n.db_t('No'), qualaroo_no_url, class: 'anchor-button', target: '_blank')
    %>
  </span>
</div>