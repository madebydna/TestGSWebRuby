<% rating ||= nil %>
<% title %>
<% subtitle ||= nil %>
<% info_text = info_text || nil %>
<% has_data %>
<% no_data_summary ||= '' %>
<% share_content = share_content || nil %>

 <div class="module-header">
   <div class="row">
     <div class="col-xs-12 col-md-10">
       <% if rating.present? && rating != 'NR' %>
         <div class="circle-rating--<%= rating %> circle-rating--medium">
           <%= rating %><span class="rating-circle-small">/10</span>
         </div>
       <% elsif local_assigns[:icon] %>
         <div class="circle-rating--equity-blue">
           <span class="icon-<%= icon %>"></span>
         </div>
       <% end %>
       <div class="title-container">
         <div>
           <span class="title">
             <%= title %>
           </span>
           <% if info_text %>
             <%= render 'info_circle', content: info_text %>
           <% end %>
         </div>
         <% if subtitle.present? %>
           <span><%= subtitle %></span>
         <% end %>
         <% unless has_data %>
           <%= render 'no_data_for_module', title: title, no_data_summary: no_data_summary %>
         <% end %>
       </div>
     </div>
     <div class="col-xs-12 col-md-2 show-history-button">
       <% if has_data %>
         <div>
           <button class="js-sharing-button">
             <a data-remodal-target="modal_info_box"
                data-content-type="info_box"
                data-content-html='<%= share_content %>'
                class="gs-tipso tipso_style"
                data-tipso-width="318"
                data-tipso-position="left"
                href="javascript:void(0)">
               <div class="dib">
                 <%= t('.share') %>
               </div>
             </a>
           </button>
         </div>
       <% end %>
     </div>
   </div>
</div>
