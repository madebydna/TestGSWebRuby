<% osp_link %>
<% osp_school_info %>
<% mailto_start = '' %>
<% mailto_end = '' %>
<% if osp_school_info.mailto %>
  <% mailto_start = "<a href='#{osp_school_info.mailto}'>" %>
  <% mailto_end = '</a>' %>
<% end %>

<div>
  <% if osp_school_info.claimed? && osp_school_info.tab_config.present? %>
    <%= react_component('OspSchoolInfo', props: {
      content: osp_school_info.tab_config,
      osp_link: osp_link,
      source_name: osp_school_info.source_name,
      qualaroo_module_link: osp_school_info.qualaroo_module_link,
      courses_by_subject: osp_school_info.courses_by_subject
    }) %>
  <% else %>
    <div id="osp-school-info--empty" class="rating-container">
      <a class="anchor-mobile-offset" name="General_info"></a>
      <div class="profile-module">
        <div class="module-header">
          <div class="circle-rating--equity-blue circle-rating--medium">
            <span class="icon-user"></span>
          </div>
          <div class="title-container">
            <div class="title"><%= t('.title') %>
              <a class="anchor-button"
                 href="<%= osp_link %>">
                <div><%= t('.edit') %></div>
              </a>
            </div>
            <div class="ptm">
              <span class="no-data"><%= t('.subtitle') %></span>
              <ul style="padding: 20px">
                <li class="no-data"><%= t('.bullet_1_html') %><br /><br /></li>
                <li class="no-data"><%= t('.bullet_2_html', mailto_start: mailto_start.html_safe, mailto_end: mailto_end.html_safe) %></li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
