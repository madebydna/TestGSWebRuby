<% encoded_address = ERB::Util.url_encode(address) %>
<% zillow_string = "#{@school.state}-#{@school.zipcode}" %>

<div class="rr-xq-school-board">
  <div class="content">
    <div class="icon">
      <%= image_tag (asset_path('icons/nearby schools_30x30.png')) %>
    </div>
    <div class="text">
      <div class="right-rail-module-header"><%= t("school_profiles.xq.school_board_finder_html", address: encoded_address) %></div>
      <div class="right-rail-module-text"><%= t("school_profiles.xq.learn_more_school_board") %></div>
      <div class="right-rail-module-sponsor"><%= t("school_profiles.xq.powered_by_xq") %></div>
    </div>
  </div>
  <hr/>
  <div class="content">
    <div class="icon">
      <%= image_tag (asset_path('icons/home.png')) %>
    </div>
    <div class="text">
      <div class="right-rail-module-header"><%= t("school_profiles.homes_sales.homes_nearby_html", query: zillow_string ) %></div>
      <div class="right-rail-module-text"><%= t("school_profiles.homes_sales.homes_body") %></div>
      <div class="right-rail-module-sponsor"><%= t("school_profiles.homes_sales.powered_by_zillow") %></div>
    </div>
  </div>
</div>