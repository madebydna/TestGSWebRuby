<% hero %>

<% if hero.should_show_osp_badge? %>
  <span >
    <span class="osp-badge"></span>
    <span class="claimed"><%= t('school_profiles.hero.claimed') %></span>
    <a data-content-type="info_box"
       data-content-html="<%= t('school_profiles.hero.claimed_tooltip_html') %>"
       class="gs-tipso info-circle tipso_style"
       href="javascript:void(0)"
       data-remodal-target="modal_info_box"><span class="icon-question"></span>
    </a>
  </span>
<% elsif hero.school.private_school? %>
  <span>
    <span class="claimed"><%= t('school_profiles.hero.unclaimed') %></span>
    <a data-content-type="info_box"
       data-content-html="<%= t('school_profiles.hero.unclaimed_tooltip_html', city: hero.school.city, state: hero.school.state, school_id: hero.school.id) %>"
       class="gs-tipso info-circle tipso_style"
       href="javascript:void(0)"
       data-remodal-target="modal_info_box"><span class="icon-question"></span>
    </a>
  </span>
<% end %>