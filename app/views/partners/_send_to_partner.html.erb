<div class="sponsored-by-text">
  <%= t('.in_partnership_with') %>
</div>
<% if options[:is_vertical_promo] %>
  <div class="send-to-partner-vertical">
<% end %>
<div class="send-to-partner">
  <div class="row">
    <div class="logo">
      <img src="<%= catalog_path(t(".#{promo[:name]}.logo_path")) %>"
           class="img-responsive center-block"
      />
    </div>
    <div class="cta">
      <div class="cta-body">
        <div class="cta-text">
          <%= t(".#{promo[:name]}.call_to_action") %>
        </div>
        <a class="btn btn-primary"
           href="<%= t(".#{promo[:name]}.link_url") %>"
           target="_blank"
           >
           <%= t(".#{promo[:name]}.link_text") %>
        </a>
      </div>
    </div>
  </div>
</div>
<% if options[:is_vertical_promo] %>
  </div>
<% end %>
