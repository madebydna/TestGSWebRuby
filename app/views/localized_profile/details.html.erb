<%= render 'nav/topnav' %>
<%= render 'localized_profile/header', school: @school %>
<%= render 'localized_profile/profile-nav', school: @school, page_name: :details %>

<div class="row limit_width_1200">
    <%= render 'shared/breadcrumbs', breadcrumbs: breadcrumb_hash %>
    <% root_placements = @page_config.root_placements_with_data %>
    <% if root_placements.empty? %>
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <div class="mvl well">
                <p>Does this school offer arts programs or sports? Share what you know and help other families. <%= link_to 'Get started >>', osp_register_url(city: @school.city,school_id: @school.id.to_s,state: @school.state) %></p>
                <p>Are you a school official? Help your school stand out on GreatSchools by updating your school's information, adding program highlights and more, for free! <%= link_to 'Get started >>', osp_form_url(school_id: @school.id.to_s,state: @school.state) %></p>

            </div>
        </div>
    <% else %>
        <div class="col-xs-12 col-sm-12 col-md-3 col-lg-3">
          <%= render 'category_placement_nav' %>
        </div>
        <div class="col-xs-12 col-sm-12 col-md-9 col-lg-9" role="main">
            <div class="row">
                <%= render partial: 'category_placement', collection: root_placements, as: :category_placement %>

            </div>
        </div>
    <% end %>
</div>
<%= render 'nav/school_profile_footer' %>